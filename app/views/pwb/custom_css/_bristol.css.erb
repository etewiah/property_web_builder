/* Hero Section Styles */
.hero-section {
  position: relative;
  background-color: #111827; /* bg-gray-900 */
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-bg-wrapper {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.hero-bg-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.6;
}

.hero-bg-placeholder {
  width: 100%;
  height: 100%;
  background-color: #1f2937; /* bg-gray-800 */
  opacity: 0.6;
}

.hero-content-wrapper {
  position: relative;
  z-index: 10;
  text-align: center;
  padding-left: 1rem;
  padding-right: 1rem;
  max-width: 56rem; /* max-w-4xl */
  margin-left: auto;
  margin-right: auto;
}

.hero-title {
  font-size: 2.25rem; /* text-4xl */
  font-weight: 800; /* font-extrabold */
  letter-spacing: -0.025em; /* tracking-tight */
  color: white;
  text-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* drop-shadow-lg */
}

@media (min-width: 640px) {
  .hero-title {
    font-size: 3rem; /* sm:text-5xl */
  }
}

@media (min-width: 768px) {
  .hero-title {
    font-size: 3.75rem; /* md:text-6xl */
  }
}

.hero-subtitle {
  margin-top: 1.5rem; /* mt-6 */
  font-size: 1.25rem; /* text-xl */
  color: #f3f4f6; /* text-gray-100 */
  text-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* drop-shadow-md */
}

/* Styling for the list-carousel content inside hero-subtitle */
.hero-subtitle .list-carousel {
  list-style: none;
  padding: 0;
  margin: 0;
}

.hero-subtitle .list-carousel li {
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.hero-subtitle .list-carousel li i {
  color: var(--primary-color);
}



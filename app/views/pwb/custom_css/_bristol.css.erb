/* Services Section Styles */
.services-section-wrapper {
  background-color: var(--services-bg-color);
  padding: 5rem 1rem;
}

.services-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.service-card {
  background: var(--services-card-bg);
  border-radius: 0.75rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  padding: 2.5rem;
  flex: 1 1 300px;
  text-align: center;
  transition: all 0.3s ease;
  border: 1px solid rgba(0,0,0,0.05);
}

.service-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

.service-icon-wrapper {
  font-size: 3.5rem;
  color: var(--primary-color);
  margin-bottom: 1.5rem;
  display: inline-block;
  padding: 1rem;
  background: rgba(59, 130, 246, 0.1); /* Light blue background based on default primary */
  border-radius: 50%;
  width: 100px;
  height: 100px;
  line-height: 70px; /* Center icon vertically */
}

.service-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--services-text-color);
}

.service-content {
  color: #4b5563;
  line-height: 1.7;
  font-size: 1.05rem;
}


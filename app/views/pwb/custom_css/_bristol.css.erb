/* Hero Section Styles */
.hero-section {
  position: relative;
  background-color: #111827; /* bg-gray-900 */
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-bg-wrapper {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.hero-bg-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.6;
}

.hero-bg-placeholder {
  width: 100%;
  height: 100%;
  background-color: #1f2937; /* bg-gray-800 */
  opacity: 0.6;
}

.hero-content-wrapper {
  position: relative;
  z-index: 10;
  text-align: center;
  padding-left: 1rem;
  padding-right: 1rem;
  max-width: 56rem; /* max-w-4xl */
  margin-left: auto;
  margin-right: auto;
}

.hero-title {
  font-size: 2.25rem; /* text-4xl */
  font-weight: 800; /* font-extrabold */
  letter-spacing: -0.025em; /* tracking-tight */
  color: white;
  text-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* drop-shadow-lg */
}

@media (min-width: 640px) {
  .hero-title {
    font-size: 3rem; /* sm:text-5xl */
  }
}

@media (min-width: 768px) {
  .hero-title {
    font-size: 3.75rem; /* md:text-6xl */
  }
}

.hero-subtitle {
  margin-top: 1.5rem; /* mt-6 */
  font-size: 1.25rem; /* text-xl */
  color: #f3f4f6; /* text-gray-100 */
  text-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* drop-shadow-md */
}

/* Styling for the list-carousel content inside hero-subtitle */
.hero-subtitle .list-carousel {
  list-style: none;
  padding: 0;
  margin: 0;
}

.hero-subtitle .list-carousel li {
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.hero-subtitle .list-carousel li i {
  color: var(--primary-color);
}

/* Our Agency Section */
.our-agency-section {
  padding: 4rem 0;
  background-color: #fff;
}

.agency-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.agency-content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

@media (min-width: 768px) {
  .agency-content-wrapper {
    flex-direction: row;
    align-items: center;
  }
}

.agency-text-column,
.agency-image-column {
  flex: 1;
}

.agency-title-wrapper {
  margin-bottom: 1.5rem;
  position: relative;
}

.agency-title {
  font-size: 2rem;
  font-weight: 800;
  text-align: left;
  color: #1f2937; /* gray-800 */
  margin: 0;
}

.agency-title span {
  position: relative;
  display: inline-block;
}

/* Optional underline effect */
.agency-title span::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 60px;
  height: 4px;
  background-color: var(--primary-color);
}

.agency-description {
  font-size: 1.125rem;
  line-height: 1.8;
  color: #4b5563; /* gray-600 */
}

.agency-image {
  width: 100%;
  height: auto;
  border-radius: 0.75rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.agency-image:hover {
  transform: scale(1.02);
}

/* Contact Us Component */
.contact-us-component {
  background-color: #ffffff;
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.contact-us-container {
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  padding-right: 1rem;
  padding-left: 1rem;
}

@media (min-width: 640px) {
  .contact-us-container {
    max-width: 640px;
  }
}

@media (min-width: 768px) {
  .contact-us-container {
    max-width: 768px;
  }
}

@media (min-width: 1024px) {
  .contact-us-container {
    max-width: 1024px;
  }
}

@media (min-width: 1280px) {
  .contact-us-container {
    max-width: 1280px;
  }
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(1, minmax(0, 1fr));
  gap: 2rem;
}

@media (min-width: 1024px) {
  .contact-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
}

.contact-form-column {
  @media (min-width: 1024px) {
    grid-column: span 2 / span 2;
  }
}

.contact-info-column {
  display: flex;
  flex-direction: column;
  gap: 1.5rem; /* space-y-6 */
}

.contact-map-wrapper {
  border-radius: 0.5rem;
  overflow: hidden;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  border: 1px solid #e5e7eb;
}

/* Search Component */
.search-component {
  background-color: #1f2937; /* bg-gray-800 */
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.search-container {
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  padding-right: 1rem;
  padding-left: 1rem;
}

@media (min-width: 640px) {
  .search-container {
    max-width: 640px;
  }
}

@media (min-width: 768px) {
  .search-container {
    max-width: 768px;
  }
}

@media (min-width: 1024px) {
  .search-container {
    max-width: 1024px;
  }
}

@media (min-width: 1280px) {
  .search-container {
    max-width: 1280px;
  }
}

.search-wrapper {
  max-width: 56rem; /* max-w-4xl */
  margin-left: auto;
  margin-right: auto;
}

/* Footer Styles */
.site-footer {
  background-color: #1f2937; /* bg-gray-800 */
  color: #ffffff;
  margin-top: auto;
}

.footer-container {
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  padding-right: 1rem;
  padding-left: 1rem;
  padding-top: 2rem;
  padding-bottom: 2rem;
}

@media (min-width: 640px) { .footer-container { max-width: 640px; } }
@media (min-width: 768px) { .footer-container { max-width: 768px; } }
@media (min-width: 1024px) { .footer-container { max-width: 1024px; } }
@media (min-width: 1280px) { .footer-container { max-width: 1280px; } }

.footer-grid {
  display: grid;
  grid-template-columns: repeat(1, minmax(0, 1fr));
  gap: 2rem;
}

@media (min-width: 768px) {
  .footer-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
}

.footer-company-name {
  font-size: 1.125rem; /* text-lg */
  font-weight: 600; /* font-semibold */
  margin-bottom: 1rem;
}

.footer-contact-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem; /* space-y-2 */
  color: #d1d5db; /* text-gray-300 */
}

.footer-contact-item {
  display: flex;
  align-items: center;
}

.footer-icon {
  margin-right: 0.75rem;
  color: #60a5fa; /* text-blue-400 */
}

.footer-link {
  color: inherit;
  text-decoration: none;
}

.footer-link:hover {
  color: #ffffff;
}

.footer-social-wrapper {
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.footer-social-icons {
  display: flex;
  gap: 1rem; /* space-x-4 */
}

.social-icon-link {
  color: #d1d5db; /* text-gray-300 */
  transition: transform 0.2s;
}

.social-icon-link:hover {
  color: #ffffff;
  transform: scale(1.25);
}

.footer-extra-content {
  color: #d1d5db; /* text-gray-300 */
}

.footer-divider {
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  border-top: 1px solid #374151; /* border-gray-700 */
}

.footer-bottom-bar {
  display: flex;
  flex-direction: column;
}

@media (min-width: 768px) {
  .footer-bottom-bar {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
}

.footer-links {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  font-size: 0.875rem; /* text-sm */
  color: #9ca3af; /* text-gray-400 */
}

.footer-bottom-link {
  color: inherit;
  text-decoration: none;
  transition: color 0.2s;
}

.footer-bottom-link:hover {
  color: #ffffff;
}

.footer-copyright {
  margin-top: 1rem;
  font-size: 0.875rem; /* text-sm */
  color: #9ca3af; /* text-gray-400 */
}

@media (min-width: 768px) {
  .footer-copyright {
    margin-top: 0;
  }
}

.footer-brand-link {
  color: #60a5fa; /* text-blue-400 */
  text-decoration: none;
}

.footer-brand-link:hover {
  color: #93c5fd; /* text-blue-300 */
}

/* Generic Content Container */
.content-container {
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  padding-right: 1rem;
  padding-left: 1rem;
}

@media (min-width: 640px) { .content-container { max-width: 640px; } }
@media (min-width: 768px) { .content-container { max-width: 768px; } }
@media (min-width: 1024px) { .content-container { max-width: 1024px; } }
@media (min-width: 1280px) { .content-container { max-width: 1280px; } }




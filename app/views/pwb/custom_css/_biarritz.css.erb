/* Custom CSS for Biarritz Theme - Coastal French Basque Style */
/* This file is rendered as a partial by the custom_styles helper */

/* WCAG AA Compliant Color System */
:root {
  /* Base Colors - All tested for WCAG AA contrast */
  --ocean-dark: #0C4A6E;      /* Deep ocean blue - text on light BG */
  --ocean-primary: #0369A1;    /* Ocean blue - backgrounds */
  --ocean-light: #E0F2FE;      /* Light ocean - backgrounds */
  
  --sand-dark: #B45309;        /* Dark sand - text on light BG */
  --sand-primary: #D97706;     /* Warm sand - accents */
  --sand-light: #FEF3C7;       /* Light sand - backgrounds */
  
  --sunset-dark: #B45309;      /* Dark sunset - text */
  --sunset-primary: #F59E0B;   /* Golden sunset - accents */
  --sunset-light: #FEF3C7;     /* Light sunset - backgrounds */
  
  --neutral-900: #1C1917;      /* Almost black - primary text */
  --neutral-800: #292524;      /* Dark gray - secondary text */
  --neutral-700: #44403C;      /* Medium gray - muted text */
  --neutral-100: #F5F5F4;      /* Light gray - backgrounds */
  --neutral-50: #FAFAF9;       /* Almost white - page background */
  
  /* Semantic Colors - Guaranteed Contrast */
  --color-primary: var(--ocean-dark);
  --color-primary-hover: #075985;
  --color-secondary: var(--sand-dark);
  --color-accent: var(--sunset-dark);
  
  --color-text-primary: var(--neutral-900);
  --color-text-secondary: var(--neutral-800);
  --color-text-muted: var(--neutral-700);
  --color-text-on-dark: #FFFFFF;
  --color-text-on-primary: #FFFFFF;
  
  --color-bg-page: var(--neutral-50);
  --color-bg-card: #FFFFFF;
  --color-bg-muted: var(--neutral-100);
  --color-bg-ocean: var(--ocean-primary);
  --color-bg-sand: var(--sand-light);
  
  --color-border: #E7E5E4;
  --color-border-accent: var(--sand-primary);
  
  /* Typography */
  --font-primary: <%= @current_website.style_variables['font_primary'] || 'system-ui, -apple-system, "Open Sans", sans-serif' %>;
  --font-heading: <%= @current_website.style_variables['font_heading'] || 'Georgia, "Playfair Display", serif' %>;
  
  /* Spacing & Layout */
  --border-radius: 0.75rem;
  --border-radius-sm: 0.5rem;
  --border-radius-lg: 1rem;
  --container-padding: 1rem;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  --shadow-ocean: 0 10px 25px -5px rgba(12, 74, 110, 0.15);
}

/* Base Theme Styles */
.biarritz-theme {
  font-family: var(--font-primary);
  color: var(--color-text-primary);
  background-color: var(--color-bg-page);
  line-height: 1.6;
}

/* Typography - Elegant Hierarchy */
.biarritz-theme h1,
.biarritz-theme h2,
.biarritz-theme h3,
.biarritz-theme h4,
.biarritz-theme h5,
.biarritz-theme h6 {
  font-family: var(--font-heading);
  font-weight: 600;
  line-height: 1.3;
  color: var(--color-text-primary);
}

.biarritz-theme h1 { font-size: 2.5rem; }
.biarritz-theme h2 { font-size: 2rem; }
.biarritz-theme h3 { font-size: 1.5rem; }

/* High Contrast Utilities */
.bg-ocean-primary {
  background-color: var(--ocean-primary) !important;
  color: var(--color-text-on-dark) !important;
}

.bg-ocean-dark {
  background-color: var(--ocean-dark) !important;
  color: var(--color-text-on-dark) !important;
}

.text-ocean {
  color: var(--ocean-dark) !important;
}

.text-sand {
  color: var(--sand-dark) !important;
}

.border-sand {
  border-color: var(--color-border-accent) !important;
}

/* Coastal Buttons - High Contrast */
.btn-ocean {
  background-color: var(--ocean-primary);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: var(--border-radius-sm);
  font-weight: 600;
  transition: all 0.2s ease;
  border: none;
}

.btn-ocean:hover {
  background-color: var(--ocean-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-ocean);
}

.btn-sand {
  background-color: var(--sand-primary);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: var(--border-radius-sm);
  font-weight: 600;
  transition: all 0.2s ease;
  border: none;
}

.btn-sand:hover {
  background-color: var(--sand-dark);
  transform: translateY(-1px);
}

/* Coastal Cards */
.card-coastal {
  background: white;
  border-radius: var(--border-radius);
  border-top: 4px solid var(--sand-primary);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.card-coastal:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

/* Wave Divider */
.wave-divider {
  position: relative;
  overflow: hidden;
}

.wave-divider svg {
  display: block;
  width: 100%;
  height: 60px;
}

/* Ensure all links have sufficient contrast */
.biarritz-theme a {
  color: var(--ocean-dark);
  text-decoration: none;
  transition: color 0.2s ease;
}

.biarritz-theme a:hover {
  color: var(--color-primary-hover);
  text-decoration: underline;
}

/* Navigation Links - High Contrast */
.nav-link {
  color: var(--neutral-900);
  font-weight: 500;
  transition: all 0.2s ease;
}

.nav-link:hover {
  color: var(--ocean-dark);
}

/* Accessibility: Focus States */
.biarritz-theme *:focus {
  outline: 2px solid var(--ocean-primary);
  outline-offset: 2px;
}

.biarritz-theme button:focus,
.biarritz-theme a:focus {
  outline: 2px solid var(--ocean-primary);
  outline-offset: 2px;
}

<%# External Listing Property Detail Page %>
<% page_title @page_title %>
<%= render 'meta_tags' %>
<%= render 'pwb/shared/leaflet_assets' %>

<div class="external-listing-detail">
  <%# Breadcrumb %>
  <nav class="bg-gray-50 border-b" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="<%= root_path %>" class="text-gray-500 hover:text-gray-700">
            <%= t("external_feed.breadcrumb.home", default: "Home") %>
          </a>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
          </svg>
          <a href="<%= external_listings_path(listing_type: @listing.listing_type) %>" class="ml-2 text-gray-500 hover:text-gray-700">
            <%= @listing.listing_type == :rental ?
                t("external_feed.breadcrumb.rentals", default: "Rentals") :
                t("external_feed.breadcrumb.sales", default: "Properties for Sale") %>
          </a>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-gray-900 font-medium truncate max-w-xs">
            <%= @listing.title %>
          </span>
        </li>
      </ol>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="lg:grid lg:grid-cols-3 lg:gap-8">
      <%# Main Content %>
      <div class="lg:col-span-2">
        <%# Fragment cache for image gallery %>
        <% cache external_listing_cache_key(@listing, "gallery") do %>
          <div class="mb-8">
            <% if @listing.images.any? %>
              <div class="relative">
                <%# Main Image %>
                <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-100">
                  <img id="main-image"
                       src="<%= @listing.main_image %>"
                       alt="<%= @listing.title %>"
                       class="w-full h-96 object-cover">
                </div>

                <%# Thumbnail Strip %>
                <% if @listing.images.size > 1 %>
                  <div class="mt-4 flex gap-2 overflow-x-auto pb-2">
                    <% @listing.images.each_with_index do |img, idx| %>
                      <button type="button"
                              onclick="document.getElementById('main-image').src = '<%= img[:url] %>'"
                              class="flex-shrink-0 w-20 h-20 rounded-md overflow-hidden border-2 hover:border-blue-500 focus:outline-none focus:border-blue-500 <%= idx == 0 ? 'border-blue-500' : 'border-transparent' %>">
                        <img src="<%= img[:thumbnail] || img[:url] %>"
                             alt="<%= @listing.title %> - Image <%= idx + 1 %>"
                             class="w-full h-full object-cover">
                      </button>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-200 flex items-center justify-center">
                <svg class="h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>

        <%# Fragment cache for property info %>
        <% cache external_listing_cache_key(@listing, "info") do %>
          <%# Property Title and Location %>
          <div class="mb-6">
            <div class="flex items-start justify-between">
              <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">
                  <%= @listing.title %>
                </h1>
                <p class="text-gray-600 flex items-center">
                  <svg class="h-5 w-5 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= [@listing.location, @listing.province, @listing.country].compact.join(", ") %>
                </p>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500">
                  <%= t("external_feed.property.reference", default: "Ref:") %> <%= @listing.reference %>
                </p>
              </div>
            </div>
          </div>

          <%# Key Features Bar %>
          <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
              <% if @listing.bedrooms.present? && @listing.bedrooms > 0 %>
                <div>
                  <p class="text-2xl font-bold text-gray-900"><%= @listing.bedrooms %></p>
                  <p class="text-sm text-gray-600"><%= t("external_feed.features.bedrooms", default: "Bedrooms") %></p>
                </div>
              <% end %>
              <% if @listing.bathrooms.present? && @listing.bathrooms > 0 %>
                <div>
                  <p class="text-2xl font-bold text-gray-900"><%= @listing.bathrooms %></p>
                  <p class="text-sm text-gray-600"><%= t("external_feed.features.bathrooms", default: "Bathrooms") %></p>
                </div>
              <% end %>
              <% if @listing.built_area.present? && @listing.built_area > 0 %>
                <div>
                  <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@listing.built_area.to_i) %></p>
                  <p class="text-sm text-gray-600"><%= t("external_feed.features.built_area_m2", default: "m2 Built") %></p>
                </div>
              <% end %>
              <% if @listing.plot_area.present? && @listing.plot_area > 0 %>
                <div>
                  <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@listing.plot_area.to_i) %></p>
                  <p class="text-sm text-gray-600"><%= t("external_feed.features.plot_area_m2", default: "m2 Plot") %></p>
                </div>
              <% end %>
            </div>
          </div>

          <%# Description %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
              <%= t("external_feed.property.description", default: "Description") %>
            </h2>
            <div class="prose max-w-none text-gray-700">
              <%= simple_format(@listing.description) %>
            </div>
          </div>
        <% end %>

        <%# Fragment cache for features %>
        <% cache external_listing_cache_key(@listing, "features") do %>
          <%# Features List %>
          <% if @listing.features.present? && @listing.features.any? %>
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">
                <%= t("external_feed.property.features", default: "Features") %>
              </h2>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                <% @listing.features.each do |feature| %>
                  <div class="flex items-center text-sm text-gray-700">
                    <svg class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <%= feature %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# Energy Rating %>
          <% if @listing.energy_rating.present? || @listing.energy_consumption.present? %>
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">
                <%= t("external_feed.property.energy", default: "Energy Rating") %>
              </h2>
              <div class="flex gap-6">
                <% if @listing.energy_rating.present? %>
                  <div class="text-center">
                    <span class="inline-block px-4 py-2 text-lg font-bold rounded
                      <%= case @listing.energy_rating.upcase
                          when 'A' then 'bg-green-500 text-white'
                          when 'B' then 'bg-green-400 text-white'
                          when 'C' then 'bg-yellow-400 text-gray-900'
                          when 'D' then 'bg-yellow-500 text-gray-900'
                          when 'E' then 'bg-orange-400 text-white'
                          when 'F' then 'bg-orange-500 text-white'
                          when 'G' then 'bg-red-500 text-white'
                          else 'bg-gray-300 text-gray-700'
                          end %>">
                      <%= @listing.energy_rating %>
                    </span>
                    <p class="text-sm text-gray-600 mt-1"><%= t("external_feed.property.energy_rating", default: "Energy Rating") %></p>
                  </div>
                <% end %>
                <% if @listing.energy_consumption.present? %>
                  <div>
                    <p class="text-lg font-semibold text-gray-900"><%= @listing.energy_consumption %> kWh/m2</p>
                    <p class="text-sm text-gray-600"><%= t("external_feed.property.energy_consumption", default: "Consumption") %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>

        <%# Social Sharing - using shared partial %>
        <%= render 'pwb/shared/social_sharing', url: request.original_url, title: @listing.title %>

        <%# Map with Stimulus controller %>
        <% if @listing.latitude.present? && @listing.longitude.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
              <%= t("external_feed.property.location_map", default: "Location") %>
            </h2>
            <div class="rounded-lg overflow-hidden shadow-sm" style="height: 400px;">
              <% map_markers = [{ lat: @listing.latitude, lng: @listing.longitude, title: @listing.title }] %>
              <div id="property-map"
                   class="w-full h-full"
                   data-controller="map"
                   data-map-target="canvas"
                   data-map-markers-value="<%= map_markers.to_json %>"
                   data-map-zoom-value="15">
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%# Sidebar %>
      <div class="lg:col-span-1">
        <div class="sticky top-4 space-y-6">
          <%# Price Card %>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="mb-4">
              <% if @listing.listing_type == :rental %>
                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                  <%= t("external_feed.listing_type.rental", default: "For Rent") %>
                </span>
              <% else %>
                <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                  <%= t("external_feed.listing_type.sale", default: "For Sale") %>
                </span>
              <% end %>
            </div>

            <p class="text-3xl font-bold text-gray-900">
              <%= @listing.formatted_price %>
            </p>
            <% if @listing.listing_type == :rental && @listing.price_frequency.present? %>
              <p class="text-gray-600">
                / <%= t("external_feed.frequency.#{@listing.price_frequency}", default: @listing.price_frequency.to_s) %>
              </p>
            <% end %>

            <% if @listing.price_reduced? && @listing.original_price.present? %>
              <p class="text-sm text-gray-500 line-through mt-1">
                <%= number_to_currency(@listing.original_price, unit: @listing.currency, precision: 0) %>
              </p>
              <span class="inline-block bg-red-100 text-red-800 text-xs font-semibold px-2 py-0.5 rounded mt-1">
                <%= t("external_feed.badges.reduced", default: "Price Reduced") %>
              </span>
            <% end %>

            <div class="mt-6 space-y-3">
              <a href="#contact-form" class="block w-full bg-blue-600 text-white text-center py-3 px-4 rounded-md font-medium hover:bg-blue-700 transition-colors">
                <%= t("external_feed.property.contact_agent", default: "Contact Agent") %>
              </a>
              <% if @current_agency&.phone_number_primary.present? %>
                <a href="tel:<%= @current_agency.phone_number_primary %>" class="block w-full border border-gray-300 text-gray-700 text-center py-3 px-4 rounded-md font-medium hover:bg-gray-50 transition-colors">
                  <%= t("external_feed.property.call_now", default: "Call Now") %>
                </a>
              <% end %>
            </div>
          </div>

          <%# Property Details Card %>
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              <%= t("external_feed.property.details", default: "Property Details") %>
            </h3>
            <dl class="space-y-3 text-sm">
              <div class="flex justify-between">
                <dt class="text-gray-600"><%= t("external_feed.property.type", default: "Type") %></dt>
                <dd class="font-medium text-gray-900">
                  <%= t("external_feed.property_types.#{@listing.property_type}", default: @listing.property_type.to_s.titleize) %>
                </dd>
              </div>
              <% if @listing.bedrooms.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.bedrooms", default: "Bedrooms") %></dt>
                  <dd class="font-medium text-gray-900"><%= @listing.bedrooms %></dd>
                </div>
              <% end %>
              <% if @listing.bathrooms.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.bathrooms", default: "Bathrooms") %></dt>
                  <dd class="font-medium text-gray-900"><%= @listing.bathrooms %></dd>
                </div>
              <% end %>
              <% if @listing.built_area.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.built_area", default: "Built Area") %></dt>
                  <dd class="font-medium text-gray-900"><%= number_with_delimiter(@listing.built_area.to_i) %> m2</dd>
                </div>
              <% end %>
              <% if @listing.plot_area.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.plot_area", default: "Plot Area") %></dt>
                  <dd class="font-medium text-gray-900"><%= number_with_delimiter(@listing.plot_area.to_i) %> m2</dd>
                </div>
              <% end %>
              <% if @listing.terrace_area.present? && @listing.terrace_area > 0 %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.terrace", default: "Terrace") %></dt>
                  <dd class="font-medium text-gray-900"><%= number_with_delimiter(@listing.terrace_area.to_i) %> m2</dd>
                </div>
              <% end %>
              <% if @listing.year_built.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.year_built", default: "Year Built") %></dt>
                  <dd class="font-medium text-gray-900"><%= @listing.year_built %></dd>
                </div>
              <% end %>
              <% if @listing.orientation.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.orientation", default: "Orientation") %></dt>
                  <dd class="font-medium text-gray-900"><%= @listing.orientation %></dd>
                </div>
              <% end %>
              <% if @listing.parking_spaces.present? && @listing.parking_spaces > 0 %>
                <div class="flex justify-between">
                  <dt class="text-gray-600"><%= t("external_feed.features.parking", default: "Parking") %></dt>
                  <dd class="font-medium text-gray-900"><%= @listing.parking_spaces %></dd>
                </div>
              <% end %>
            </dl>
          </div>

          <%# Agency Contact Info Card %>
          <% if @current_agency.present? %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="bg-gray-800 px-4 py-3">
                <h3 class="text-lg font-semibold text-white">
                  <%= t("external_feed.property.contact_info", default: "Contact Information") %>
                </h3>
              </div>
              <div class="p-4">
                <h4 class="font-semibold text-gray-800 mb-2">
                  <%= @current_agency.display_name.presence || @current_agency.company_name %>
                </h4>

                <% if @current_agency.street_address.present? || @current_agency.city.present? %>
                  <p class="text-gray-600 mb-4">
                    <% if @current_agency.street_number.present? || @current_agency.street_address.present? %>
                      <%= @current_agency.street_number %><%= ', ' if @current_agency.street_number.present? && @current_agency.street_address.present? %><%= @current_agency.street_address %>
                      <br>
                    <% end %>
                    <%= @current_agency.city %>
                    <% if @current_agency.postal_code.present? %>
                      , <%= @current_agency.postal_code %>
                    <% end %>
                  </p>
                <% end %>

                <div class="space-y-2">
                  <% if @current_agency.phone_number_primary.present? %>
                    <div class="flex items-center text-gray-700">
                      <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                      <a href="tel:<%= @current_agency.phone_number_primary %>" class="hover:text-blue-600">
                        <%= @current_agency.phone_number_primary %>
                      </a>
                    </div>
                  <% end %>

                  <% if @current_agency.email_primary.present? %>
                    <div class="flex items-center text-gray-700">
                      <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                      <a href="mailto:<%= @current_agency.email_primary %>" class="hover:text-blue-600">
                        <%= @current_agency.email_primary %>
                      </a>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <%# Share Property Card %>
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              <%= t("external_feed.property.share", default: "Share Property") %>
            </h3>
            <%= render 'pwb/shared/social_sharing',
                       url: request.original_url,
                       title: @listing.title,
                       style: :bologna,
                       networks: [:facebook, :linkedin, :twitter, :whatsapp] %>
          </div>
        </div>
      </div>
    </div>

    <%# Similar Properties %>
    <% if @similar.present? && @similar.any? %>
      <div class="mt-12 border-t pt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          <%= t("external_feed.property.similar", default: "Similar Properties") %>
        </h2>
        <%= render "similar", properties: @similar %>
      </div>
    <% end %>

    <%# Contact Form Section %>
    <div id="contact-form" class="mt-12 border-t pt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        <%= t("external_feed.property.inquire", default: "Inquire About This Property") %>
      </h2>
      <div class="max-w-2xl">
        <%= render 'contact_form' %>
      </div>
    </div>
  </div>
</div>

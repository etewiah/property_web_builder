<div class="bg-white rounded-2xl shadow-xl p-8">
  <div class="text-center">
    <!-- Success Icon -->
    <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-6">
      <span class="text-4xl text-green-600">&#10003;</span>
    </div>

    <h2 class="text-3xl font-bold text-gray-900 mb-2">Your Website is Ready!</h2>
    <p class="text-gray-600 mb-8">Congratulations! Your property website has been created.</p>

    <!-- Website URL -->
    <div class="bg-indigo-50 rounded-lg p-6 mb-8">
      <p class="text-sm text-gray-500 mb-2">Your website is live at:</p>
      <a
        href="<%= @website.primary_url %>"
        target="_blank"
        class="text-xl font-mono text-indigo-600 hover:text-indigo-800 break-all"
      >
        <%= @website.primary_url %>
      </a>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-3">
      <a
        href="<%= @website.primary_url %>"
        target="_blank"
        class="block w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold text-lg hover:bg-indigo-700 transition-colors"
      >
        View Your Website &#8599;
      </a>
      <a
        href="<%= @website.primary_url %>/site_admin"
        target="_blank"
        class="block w-full bg-white text-indigo-600 border-2 border-indigo-600 py-3 px-4 rounded-lg font-semibold text-lg hover:bg-indigo-50 transition-colors"
      >
        Go to Admin Dashboard &#8594;
      </a>
    </div>
  </div>
</div>

<!-- Next Steps -->
<div class="mt-8 bg-white rounded-2xl shadow-xl p-8">
  <h3 class="text-xl font-bold text-gray-900 mb-6">Next Steps</h3>
  <div class="space-y-4">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
        1
      </div>
      <div class="ml-4">
        <h4 class="font-semibold text-gray-900">Set Your Password</h4>
        <p class="text-sm text-gray-500">Check your email (<%= @user&.email %>) for login instructions</p>
      </div>
    </div>
    <div class="flex items-start">
      <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
        2
      </div>
      <div class="ml-4">
        <h4 class="font-semibold text-gray-900">Add Your Properties</h4>
        <p class="text-sm text-gray-500">Replace sample properties with your real listings</p>
      </div>
    </div>
    <div class="flex items-start">
      <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
        3
      </div>
      <div class="ml-4">
        <h4 class="font-semibold text-gray-900">Customize Your Site</h4>
        <p class="text-sm text-gray-500">Update colors, logo, and content to match your brand</p>
      </div>
    </div>
    <div class="flex items-start">
      <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
        4
      </div>
      <div class="ml-4">
        <h4 class="font-semibold text-gray-900">Connect Your Domain (Optional)</h4>
        <p class="text-sm text-gray-500">Use your own domain name instead of the subdomain</p>
      </div>
    </div>
  </div>
</div>


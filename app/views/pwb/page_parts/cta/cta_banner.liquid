{% comment %}
  CTA Banner - WYSIWYG Optimized

  Simple call-to-action banner with no z-index complexity.
  Background color is handled via CSS modifier class.
{% endcomment %}

<section class="pwb-cta pwb-cta--banner pwb-cta--{{ page_part.style.content | default: 'primary' }}">
  <div class="pwb-container">
    <div class="pwb-cta__content">

      {%- comment -%} Text Content {%- endcomment -%}
      <div class="pwb-cta__text">
        <h2 class="pwb-cta__title">{{ page_part.title.content | default: "Ready to Get Started?" }}</h2>
        {% if page_part.subtitle.content %}
          <p class="pwb-cta__subtitle">{{ page_part.subtitle.content }}</p>
        {% endif %}
      </div>

      {%- comment -%} Action Buttons {%- endcomment -%}
      <div class="pwb-cta__actions">
        <a href="{{ page_part.button_link.content | default: '#' | localize_url }}"
           class="pwb-btn pwb-btn--{{ page_part.button_style.content | default: 'white' }} pwb-btn--lg"
           data-pwb-link="true">
          {{ page_part.button_text.content | default: 'Get Started' }}
        </a>
        {% if page_part.secondary_button_text.content %}
          <a href="{{ page_part.secondary_button_link.content | default: '#' | localize_url }}"
             class="pwb-btn pwb-btn--outline-white pwb-btn--lg"
             data-pwb-link="true">
            {{ page_part.secondary_button_text.content }}
          </a>
        {% endif %}
      </div>

    </div>
  </div>
</section>

<div class="max-w-4xl mx-auto">
  <!-- Breadcrumbs -->
  <nav class="text-sm mb-4">
    <ol class="flex items-center space-x-2 text-gray-500">
      <li><%= link_to "Websites", tenant_admin_websites_path, class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li><%= link_to @website.subdomain || "(No subdomain)", tenant_admin_website_path(@website), class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">Rendering Pipeline</li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Rendering Pipeline</h1>
    <p class="mt-1 text-sm text-gray-600"><%= @website.subdomain || "(No subdomain)" %></p>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <p class="ml-3 text-sm font-medium text-green-800"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>

  <!-- Current Settings Info -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <p class="text-sm font-medium text-blue-800">
          Current mode: <strong><%= @website.rendering_mode == 'client' ? 'Client Mode (A Themes)' : 'Rails Mode (B Themes)' %></strong>
        </p>
        <p class="text-sm text-blue-700 mt-1">
          <% if @website.client_rendering? %>
            Client theme: <strong><%= @website.client_theme_name || "Not selected" %></strong>
          <% else %>
            Rails theme: <strong><%= @website.theme_name || "default" %></strong>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <% if @website.rendering_mode_locked? %>
    <!-- Warning: Mode Locked -->
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="h-5 w-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-amber-800">Rendering Mode Locked</h3>
          <p class="text-sm text-amber-700 mt-1">
            This website has content that was created with the current rendering mode.
            Changing the rendering mode is disabled to prevent data inconsistencies.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rendering Form -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-4 md:px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Rendering Settings</h2>
        <% if @website.rendering_mode_locked? %>
          <span class="bg-amber-100 text-amber-800 text-xs font-medium px-2.5 py-0.5 rounded border border-amber-200">
            Mode Locked (Content Created)
          </span>
        <% end %>
      </div>
    </div>
    <div class="p-4 md:p-6">
      <%= form_with url: update_rendering_tenant_admin_website_path(@website),
          method: :patch,
          scope: :website,
          local: true,
          class: "space-y-6",
          data: { controller: "rendering-mode" } do |f| %>

        <!-- Rendering Mode Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">
            Rendering Mode
          </label>
          <p class="text-sm text-gray-600 mb-4">
            Select how this website should be rendered. <strong>Rails Mode</strong> uses server-side Liquid themes.
            <strong>Client Mode</strong> uses the Astro.js frontend with A-themes.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="relative cursor-pointer <%= @website.rendering_mode_locked? ? 'opacity-60 cursor-not-allowed' : '' %>">
              <input type="radio" name="website[rendering_mode]" value="rails"
                     <%= 'checked' if @website.rendering_mode != 'client' %>
                     <%= 'disabled' if @website.rendering_mode_locked? %>
                     class="sr-only peer"
                     data-action="change->rendering-mode#toggle">
              <div class="border-2 rounded-lg p-4 peer-checked:border-blue-500 peer-checked:bg-blue-50 hover:border-gray-400 transition-colors">
                <div class="flex items-center mb-2">
                  <svg class="w-6 h-6 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                  </svg>
                  <span class="font-medium text-gray-900">Rails Mode (B Themes)</span>
                  <span class="hidden peer-checked:inline-block text-blue-600 ml-auto">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </span>
                </div>
                <p class="text-sm text-gray-500">Standard server-side rendering with Liquid templates</p>
              </div>
            </label>

            <label class="relative cursor-pointer <%= @website.rendering_mode_locked? ? 'opacity-60 cursor-not-allowed' : '' %>">
              <input type="radio" name="website[rendering_mode]" value="client"
                     <%= 'checked' if @website.rendering_mode == 'client' %>
                     <%= 'disabled' if @website.rendering_mode_locked? %>
                     class="sr-only peer"
                     data-action="change->rendering-mode#toggle">
              <div class="border-2 rounded-lg p-4 peer-checked:border-blue-500 peer-checked:bg-blue-50 hover:border-gray-400 transition-colors">
                <div class="flex items-center mb-2">
                  <svg class="w-6 h-6 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span class="font-medium text-gray-900">Client Mode (A Themes)</span>
                  <span class="hidden peer-checked:inline-block text-blue-600 ml-auto">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </span>
                </div>
                <p class="text-sm text-gray-500">Modern client-side rendering with Astro.js</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Theme Selection -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Theme Selection</h3>

          <!-- Rails Theme Selection -->
          <div id="rails_theme_section" class="<%= 'hidden' if @website.client_rendering? %>">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Rails Theme (B Theme)
            </label>
            <% theme_options = @themes.map { |t| [t.friendly_name || t.name.titleize, t.name] } %>
            <%= f.select :theme_name,
                options_for_select(theme_options, @website.theme_name),
                { include_blank: 'Select a B-theme' },
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            <p class="mt-1 text-xs text-gray-500">Server-rendered themes using Liquid templates</p>
          </div>

          <!-- Client Theme Selection -->
          <div id="client_theme_section" class="<%= 'hidden' unless @website.client_rendering? %>">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Client Theme (A Theme)
            </label>
            <% client_theme_options = @client_themes.map { |t| [t.friendly_name, t.name] } %>
            <%= f.select :client_theme_name,
                options_for_select(client_theme_options, @website.client_theme_name),
                { include_blank: 'Select an A-theme' },
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            <p class="mt-1 text-xs text-gray-500">Client-rendered themes using Astro.js</p>

            <!-- Astro Client URL (Advanced) -->
            <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Astro Client URL
                <span class="text-gray-400 font-normal">(Optional)</span>
              </label>
              <input type="text"
                     name="website[astro_client_url]"
                     value="<%= @website.client_theme_config&.dig('astro_client_url') %>"
                     placeholder="https://custom-astro.example.com"
                     class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
              <p class="mt-1 text-xs text-gray-500">
                Custom Astro server URL for this tenant. Leave blank to use the default server.
              </p>
              <% if @website.client_theme_config&.dig('astro_client_url').present? %>
                <p class="mt-2 text-xs text-blue-600">
                  Currently routing to: <code class="bg-blue-50 px-1 rounded"><%= @website.client_theme_config['astro_client_url'] %></code>
                </p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel",
              tenant_admin_website_path(@website),
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
          <%= f.submit "Save Rendering Settings",
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const railsRadio = document.querySelector('input[name="website[rendering_mode]"][value="rails"]');
    const clientRadio = document.querySelector('input[name="website[rendering_mode]"][value="client"]');
    const railsSection = document.getElementById('rails_theme_section');
    const clientSection = document.getElementById('client_theme_section');

    function toggleSections() {
      if (clientRadio && clientRadio.checked) {
        railsSection.classList.add('hidden');
        clientSection.classList.remove('hidden');
      } else {
        railsSection.classList.remove('hidden');
        clientSection.classList.add('hidden');
      }
    }

    if (railsRadio) railsRadio.addEventListener('change', toggleSections);
    if (clientRadio) clientRadio.addEventListener('change', toggleSections);
  });
</script>

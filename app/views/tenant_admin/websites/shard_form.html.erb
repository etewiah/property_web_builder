<div class="max-w-4xl mx-auto">
  <!-- Breadcrumbs -->
  <nav class="text-sm mb-4">
    <ol class="flex items-center space-x-2 text-gray-500">
      <li><%= link_to "Websites", tenant_admin_websites_path, class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li><%= link_to @website.subdomain, tenant_admin_website_path(@website), class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">Shard Assignment</li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Shard Assignment</h1>
    <p class="mt-1 text-sm text-gray-600"><%= @website.subdomain %></p>
  </div>

  <!-- Current Shard Info -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <p class="text-sm font-medium text-blue-800">Current shard: <strong><%= @current_shard %></strong></p>
        <p class="text-sm text-blue-700 mt-1">
          Last changed:
          <% if @audit_logs.any? %>
            <%= time_ago_in_words(@audit_logs.first.created_at) %> ago
            by <%= @audit_logs.first.changed_by_email %>
          <% else %>
            Never
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Assignment Form -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-4 md:px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Assign to Different Shard</h2>
    </div>
    <div class="p-4 md:p-6">
      <%= form_with url: assign_shard_tenant_admin_website_path(@website),
          method: :patch,
          local: true,
          class: "space-y-4",
          data: { turbo: true } do |f| %>

        <div>
          <label for="shard_name" class="block text-sm font-medium text-gray-700 mb-1">Target Shard</label>
          <%= select_tag :shard_name,
              options_for_select(@available_shards, @current_shard),
              class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Choose the database shard for this website</p>
        </div>

        <div>
          <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">Reason for Change</label>
          <%= text_area_tag :notes,
              nil,
              rows: 3,
              placeholder: "Optional: Explain why you're changing shards",
              class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Warning -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Warning: Routing Change Only</h3>
              <p class="text-sm text-yellow-700 mt-1">
                This only updates the shard routing configuration. Data is NOT automatically migrated.
                To migrate data, you must use the migration wizard separately (Phase 3 feature).
              </p>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-4">
          <%= link_to "Cancel",
              tenant_admin_website_path(@website),
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
          <%= f.submit "Assign to Shard",
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 cursor-pointer",
              data: { confirm: "Are you sure? This will change where database queries are routed for this website." } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Current Shard Health -->
  <% if @shard_health %>
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-4 md:px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Current Shard Health</h2>
      </div>
      <div class="p-4 md:p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Status</p>
            <p class="mt-2">
              <% status_class = case @shard_health.status_color
                 when 'success' then 'bg-green-100 text-green-800'
                 when 'error' then 'bg-red-100 text-red-800'
                 when 'warning' then 'bg-yellow-100 text-yellow-800'
                 else 'bg-gray-100 text-gray-800'
                 end %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium <%= status_class %>">
                <%= @shard_health.status_label %>
              </span>
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Query Time</p>
            <p class="mt-2 text-xl font-semibold text-gray-900">
              <%= @shard_health.avg_query_ms || 'N/A' %><% if @shard_health.avg_query_ms %>ms<% end %>
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Database Size</p>
            <p class="mt-2 text-xl font-semibold text-gray-900">
              <%= number_to_human_size(@shard_health.database_size) if @shard_health.database_size %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Shard Assignment History -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 md:px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Shard Assignment History</h2>
      <% if @audit_logs.count >= 5 %>
        <%= link_to "View All",
            shard_history_tenant_admin_website_path(@website),
            class: "text-sm text-blue-600 hover:text-blue-800" %>
      <% end %>
    </div>
    <div class="p-4 md:p-6">
      <% if @audit_logs.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">From</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">To</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Changed By</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @audit_logs.each do |log| %>
                <tr>
                  <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500"><%= log.created_at.to_fs(:short) %></td>
                  <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500"><%= log.old_shard_name || 'N/A' %></td>
                  <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= log.new_shard_name %></td>
                  <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500"><%= log.changed_by_email %></td>
                  <td class="px-3 py-4 text-sm text-gray-500"><%= truncate(log.notes, length: 50) if log.notes %></td>
                  <td class="px-3 py-4 whitespace-nowrap">
                    <% if log.successful? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        Success
                      </span>
                    <% elsif log.failed? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                        </svg>
                        Failed
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-3 h-3 mr-1 animate-spin" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Pending
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No shard changes recorded</p>
      <% end %>
    </div>
  </div>
</div>

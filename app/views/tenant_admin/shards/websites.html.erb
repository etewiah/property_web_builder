<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5">
  <div class="w-full mb-1">
    <div class="mb-4">
      <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
          <li class="inline-flex items-center">
            <%= link_to tenant_admin_root_path, class: "inline-flex items-center text-gray-700 hover:text-blue-600" do %>
              <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
              Dashboard
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
              <%= link_to "Shards", tenant_admin_shards_path, class: "ml-1 text-gray-700 hover:text-blue-600 md:ml-2" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
              <%= link_to @shard_name.titleize, tenant_admin_shard_path(@shard_name), class: "ml-1 text-gray-700 hover:text-blue-600 md:ml-2" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
              <span class="ml-1 text-gray-400 md:ml-2" aria-current="page">Websites</span>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl">
        Websites on <%= @shard_name.titleize %> Shard
      </h1>
    </div>
  </div>
</div>

<div class="p-4">
  <!-- Summary Stats -->
  <div class="grid grid-cols-1 gap-4 mb-4 sm:grid-cols-2 lg:grid-cols-4">
    <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl font-bold text-gray-900"><%= @websites.count %></span>
        </div>
        <div class="flex-1 min-w-0 ml-4">
          <p class="text-sm font-medium text-gray-500">Total Websites</p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl font-bold text-gray-900"><%= @total_users %></span>
        </div>
        <div class="flex-1 min-w-0 ml-4">
          <p class="text-sm font-medium text-gray-500">Total Users</p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl font-bold text-gray-900"><%= @total_properties %></span>
        </div>
        <div class="flex-1 min-w-0 ml-4">
          <p class="text-sm font-medium text-gray-500">Total Properties</p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <% avg_props = @websites.count > 0 ? (@total_properties.to_f / @websites.count).round(1) : 0 %>
          <span class="text-2xl font-bold text-gray-900"><%= avg_props %></span>
        </div>
        <div class="flex-1 min-w-0 ml-4">
          <p class="text-sm font-medium text-gray-500">Avg Props/Website</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Websites Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Websites List</h3>
    </div>
    
    <% if @websites.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subdomain</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Users</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Properties</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @websites.each do |website| %>
              <%#
                Count users via direct website_id OR through user_memberships.
                Users can access a website in two ways:
                1. Direct: User.website_id = website.id (primary website)
                2. Membership: UserMembership(user_id, website_id) (multi-website access)
                DISTINCT ensures users with both associations aren't double-counted.
                See: TenantAdmin::WebsitesController#count_website_users
              %>
              <%
                users_count = Pwb::User.unscoped.where(
                  "website_id = :id OR id IN (SELECT user_id FROM pwb_user_memberships WHERE website_id = :id)",
                  id: website.id
                ).distinct.count rescue 0
                props_count = Pwb::RealtyAsset.unscoped.where(website_id: website.id).count rescue 0
              %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to website.subdomain || "(No subdomain)", tenant_admin_website_path(website), class: "text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= website.company_display_name || "N/A" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= users_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= props_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= time_ago_in_words(website.created_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "View", tenant_admin_website_path(website), class: "text-blue-600 hover:text-blue-800 mr-3" %>
                  <%= link_to "Manage Shard", shard_tenant_admin_website_path(website), class: "text-gray-600 hover:text-gray-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No websites found</h3>
        <p class="mt-1 text-sm text-gray-500">No websites are currently assigned to this shard.</p>
      </div>
    <% end %>
  </div>
</div>

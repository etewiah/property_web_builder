<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5">
  <div class="w-full mb-1">
    <div class="mb-4">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl">All Users (Cross-Tenant)</h1>
    </div>
    <div class="sm:flex">
      <div class="items-center hidden mb-3 sm:flex sm:divide-x sm:divide-gray-100 sm:mb-0">
        <%= form_with url: tenant_admin_users_path, method: :get, class: "lg:pr-3" do |f| %>
          <%= f.text_field :search, value: params[:search], placeholder: "Search by email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" %>
        <% end %>
      </div>
      <div class="flex items-center ml-auto space-x-2 sm:space-x-3">
        <%= link_to new_tenant_admin_user_path, class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300" do %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
          Add User
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full align-middle">
      <div class="overflow-hidden shadow">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Email</th>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Website</th>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Admin</th>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Sign-in Count</th>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Last Sign-in</th>
              <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-100">
                <td class="p-4 text-sm font-medium text-gray-900">
                  <%= link_to user.email, tenant_admin_user_path(user), class: "text-primary-600 hover:underline" %>
                </td>
                <td class="p-4 text-sm text-gray-500">
                  N/A
                </td>
                <td class="p-4 text-sm text-gray-500">
                  <%= user.respond_to?(:admin) && user.admin ? 'âœ“' : '-' %>
                </td>
                <td class="p-4 text-sm text-gray-500">
                  <%= user.respond_to?(:sign_in_count) ? user.sign_in_count : 'N/A' %>
                </td>
                <td class="p-4 text-sm text-gray-500">
                  <%= user.respond_to?(:last_sign_in_at) && user.last_sign_in_at ? time_ago_in_words(user.last_sign_in_at) + ' ago' : 'Never' %>
                </td>
                <td class="p-4 space-x-2 whitespace-nowrap">
                  <%= link_to "View", tenant_admin_user_path(user), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800" %>
                </td>
              </tr>
            <% end %>
            <% if @users.empty? %>
              <tr>
                <td colspan="6" class="p-8 text-center text-gray-500">No users found</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

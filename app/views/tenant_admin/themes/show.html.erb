<div class="max-w-6xl mx-auto">
  <!-- Breadcrumbs -->
  <nav class="text-sm mb-4">
    <ol class="flex items-center space-x-2 text-gray-500">
      <li><%= link_to "Dashboard", tenant_admin_root_path, class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li><%= link_to "Themes", tenant_admin_themes_path, class: "hover:text-blue-600" %></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium"><%= @theme.friendly_name %></li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900"><%= @theme.friendly_name %></h1>
      <p class="mt-1 text-sm text-gray-500 font-mono"><%= @theme.name %></p>
    </div>
    <div class="flex gap-2">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
        v<%= @theme.version %>
      </span>
      <%= link_to websites_tenant_admin_theme_path(@theme.name), class: "px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center text-sm" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
        View Websites (<%= @websites.count %>)
      <% end %>
    </div>
  </div>

  <!-- Theme Info Card -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="p-4 md:p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="md:col-span-2">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">About This Theme</h3>
          <% if @theme.description.present? %>
            <p class="text-gray-600 mb-4"><%= @theme.description %></p>
          <% else %>
            <p class="text-gray-400 italic mb-4">No description available</p>
          <% end %>

          <% if @theme.tags.present? %>
            <div class="flex flex-wrap gap-2 mb-4">
              <% @theme.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                  <%= tag %>
                </span>
              <% end %>
            </div>
          <% end %>

          <% if @theme.has_parent? %>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mt-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-blue-800">
                  This theme extends <strong><%= @theme.parent.friendly_name %></strong>
                </span>
              </div>
            </div>
          <% end %>
        </div>

        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-700 mb-3">Statistics</h4>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Websites Using</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= @websites.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Palettes Available</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= @theme.palettes.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Page Parts</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= @theme.available_page_parts.count %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Layouts</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= @theme.supported_layouts.count %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Palettes Section -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-4 md:px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Color Palettes</h2>
      <p class="text-sm text-gray-500 mt-1">Available color palettes for this theme</p>
    </div>
    <div class="p-4 md:p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @palette_stats.each do |palette| %>
          <div class="border rounded-lg p-4 <%= palette.is_default ? 'border-blue-300 bg-blue-50' : 'border-gray-200' %>">
            <!-- Color Preview -->
            <div class="flex h-16 rounded-lg overflow-hidden mb-3 shadow-sm">
              <% palette.preview_colors.each_with_index do |color, i| %>
                <div class="flex-1 <%= 'rounded-l-lg' if i == 0 %> <%= 'rounded-r-lg' if i == palette.preview_colors.length - 1 %>"
                     style="background-color: <%= color %>"></div>
              <% end %>
            </div>

            <div class="flex items-start justify-between mb-2">
              <div>
                <h4 class="font-medium text-gray-900"><%= palette.name %></h4>
                <% if palette.is_default %>
                  <span class="text-xs bg-blue-200 text-blue-800 px-1.5 py-0.5 rounded">default</span>
                <% end %>
              </div>
              <span class="text-sm font-bold text-gray-600 bg-gray-100 px-2 py-0.5 rounded">
                <%= palette.website_count %> <span class="text-xs font-normal">sites</span>
              </span>
            </div>

            <% if palette.description.present? %>
              <p class="text-xs text-gray-500 mb-3 line-clamp-2"><%= palette.description %></p>
            <% end %>

            <!-- Color Details -->
            <div class="grid grid-cols-2 gap-2 text-xs">
              <% palette.colors.first(4).each do |color_name, color_value| %>
                <div class="flex items-center gap-2">
                  <div class="w-4 h-4 rounded border border-gray-300" style="background-color: <%= color_value %>"></div>
                  <span class="text-gray-600 truncate"><%= color_name.to_s.humanize %></span>
                </div>
              <% end %>
            </div>

            <% if palette.website_count > 0 %>
              <div class="mt-3 pt-3 border-t border-gray-200 text-xs text-gray-500">
                <% if palette.is_default && palette.default_count > 0 %>
                  <%= palette.explicit_count %> explicit + <%= palette.default_count %> default
                <% else %>
                  <%= palette.website_count %> website<%= palette.website_count != 1 ? 's' : '' %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Websites Using This Theme -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 md:px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">Websites Using This Theme</h2>
        <p class="text-sm text-gray-500 mt-1">Most recently created websites</p>
      </div>
      <% if @websites.count > 5 %>
        <%= link_to websites_tenant_admin_theme_path(@theme.name), class: "text-sm text-blue-600 hover:text-blue-800" do %>
          View All (<%= @websites.count %>) &rarr;
        <% end %>
      <% end %>
    </div>
    <div class="p-4 md:p-6">
      <% if @websites.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Palette</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @websites.limit(5).each do |website| %>
                <tr>
                  <td class="px-3 py-4 whitespace-nowrap">
                    <div>
                      <%= link_to tenant_admin_website_path(website), class: "text-sm font-medium text-blue-600 hover:text-blue-800" do %>
                        <%= website.subdomain || "(No subdomain)" %>
                      <% end %>
                      <% if website.company_display_name.present? %>
                        <p class="text-xs text-gray-500"><%= website.company_display_name %></p>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-3 py-4 whitespace-nowrap">
                    <% palette_id = website.selected_palette || @theme.default_palette_id %>
                    <% palette = @theme.palette(palette_id) %>
                    <% if palette %>
                      <div class="flex items-center gap-2">
                        <div class="flex h-5 rounded overflow-hidden shadow-sm" style="width: 40px;">
                          <% (palette['preview_colors'] || []).each do |color| %>
                            <div class="flex-1" style="background-color: <%= color %>"></div>
                          <% end %>
                        </div>
                        <span class="text-xs text-gray-600"><%= palette['name'] %></span>
                      </div>
                    <% else %>
                      <span class="text-xs text-gray-400">default</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= website.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-3 py-4 whitespace-nowrap">
                    <% status_class = case website.provisioning_state
                       when 'live' then 'bg-green-100 text-green-800'
                       when 'ready' then 'bg-green-100 text-green-800'
                       when 'failed' then 'bg-red-100 text-red-800'
                       else 'bg-yellow-100 text-yellow-800'
                       end %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= status_class %>">
                      <%= website.provisioning_state&.humanize || 'Unknown' %>
                    </span>
                  </td>
                  <td class="px-3 py-4 whitespace-nowrap text-right">
                    <%= link_to "Manage", tenant_admin_website_path(website), class: "text-sm text-blue-600 hover:text-blue-800" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
          <p class="mt-2 text-sm text-gray-500">No websites using this theme yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

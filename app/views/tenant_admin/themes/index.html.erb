<div class="max-w-7xl mx-auto">
  <%# Header %>
  <div class="mb-4 md:mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Themes & Palettes</h1>
      <p class="mt-1 md:mt-2 text-sm md:text-base text-gray-600">Overview of available themes and color palettes</p>
    </div>
  </div>

  <%# Statistics Cards %>
  <div class="grid grid-cols-2 lg:grid-cols-5 gap-3 md:gap-6 mb-6 md:mb-8">
    <%# Rails Themes (B) %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-600">Rails Themes</p>
          <p class="text-2xl md:text-3xl font-bold text-purple-600 mt-1 md:mt-2"><%= @themes.count %></p>
        </div>
        <div class="bg-purple-100 rounded-full p-2 md:p-3 hidden sm:block">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
          </svg>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">B themes (server)</p>
    </div>

    <%# Client Themes (A) %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-600">Client Themes</p>
          <p class="text-2xl md:text-3xl font-bold text-cyan-600 mt-1 md:mt-2"><%= @client_themes.count %></p>
        </div>
        <div class="bg-cyan-100 rounded-full p-2 md:p-3 hidden sm:block">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">A themes (Astro)</p>
    </div>

    <%# Total Palettes %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-600">Total Palettes</p>
          <p class="text-2xl md:text-3xl font-bold text-blue-600 mt-1 md:mt-2"><%= @themes.sum(&:palette_count) %></p>
        </div>
        <div class="bg-blue-100 rounded-full p-2 md:p-3 hidden sm:block">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.098 19.902a3.75 3.75 0 005.304 0l6.401-6.402M6.75 21A3.75 3.75 0 013 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 003.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008z" />
          </svg>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">across all themes</p>
    </div>

    <%# Total Websites %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-600">Total Websites</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= number_with_delimiter(@distribution[:total]) %></p>
        </div>
        <div class="bg-green-100 rounded-full p-2 md:p-3 hidden sm:block">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">using themes</p>
    </div>

    <%# Most Popular Theme %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-600">Most Popular</p>
          <% popular_theme = @themes.max_by(&:website_count) %>
          <p class="text-lg md:text-xl font-bold text-gray-900 mt-1 md:mt-2 truncate"><%= popular_theme&.friendly_name || 'N/A' %></p>
        </div>
        <div class="bg-yellow-100 rounded-full p-2 md:p-3 hidden sm:block">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2"><%= popular_theme&.website_count || 0 %> websites</p>
    </div>
  </div>

  <%# Rails Themes Section Header %>
  <div class="flex items-center gap-2 mb-4">
    <div class="bg-purple-100 rounded-full p-1.5">
      <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
      </svg>
    </div>
    <h2 class="text-lg font-semibold text-gray-900">Rails Themes (B Themes)</h2>
    <span class="text-sm text-gray-500">Server-side rendering with Liquid templates</span>
  </div>

  <%# Rails Theme Cards Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-6 mb-6 md:mb-8">
    <% @themes.each do |theme| %>
      <div class="bg-white rounded-lg shadow overflow-hidden border-l-4 border-purple-500">
        <div class="p-4 md:p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= theme.friendly_name %></h3>
              <span class="text-xs text-gray-500 font-mono"><%= theme.name %></span>
            </div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
              v<%= theme.version %>
            </span>
          </div>

          <% if theme.description.present? %>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= theme.description %></p>
          <% end %>

          <div class="grid grid-cols-2 gap-2 text-center mb-4">
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="text-xl md:text-2xl font-bold text-blue-600"><%= number_with_delimiter(theme.website_count) %></div>
              <div class="text-xs text-gray-500">Websites</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="text-xl md:text-2xl font-bold text-purple-600"><%= theme.palette_count %></div>
              <div class="text-xs text-gray-500">Palettes</div>
            </div>
          </div>

          <%# Palette Preview %>
          <div class="mb-4">
            <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Palettes</p>
            <div class="space-y-2">
              <% theme.palettes.first(3).each do |palette_id, palette| %>
                <div class="flex items-center gap-2">
                  <div class="flex h-6 rounded overflow-hidden shadow-sm flex-shrink-0" style="width: 80px;">
                    <% (palette['preview_colors'] || []).each do |color| %>
                      <div class="flex-1" style="background-color: <%= color %>"></div>
                    <% end %>
                  </div>
                  <span class="text-xs text-gray-600 truncate"><%= palette['name'] %></span>
                  <% if palette['is_default'] %>
                    <span class="text-xs bg-blue-100 text-blue-700 px-1 rounded">default</span>
                  <% end %>
                </div>
              <% end %>
              <% if theme.palette_count > 3 %>
                <p class="text-xs text-gray-400">+ <%= theme.palette_count - 3 %> more palettes</p>
              <% end %>
            </div>
          </div>

          <%# Tags %>
          <% if theme.tags.present? %>
            <div class="flex flex-wrap gap-1 mb-4">
              <% theme.tags.each do |tag| %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                  <%= tag %>
                </span>
              <% end %>
            </div>
          <% end %>

          <%# Distribution %>
          <% if @distribution[:total] > 0 %>
            <% percentage = @distribution[:percentages][theme.name] || 0 %>
            <div class="mb-4">
              <div class="flex justify-between text-xs mb-1">
                <span class="text-gray-500">Usage</span>
                <span class="font-medium text-gray-700"><%= number_with_precision(percentage, precision: 1) %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
              </div>
            </div>
          <% end %>

          <div class="flex justify-between pt-4 border-t border-gray-200">
            <%= link_to tenant_admin_theme_path(theme.name), class: "px-3 py-1.5 bg-purple-600 text-white text-sm rounded hover:bg-purple-700 flex items-center" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Details
            <% end %>
            <%= link_to websites_tenant_admin_theme_path(theme.name), class: "px-3 py-1.5 text-gray-700 text-sm hover:text-gray-900 flex items-center" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              Websites
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Client Themes Section Header %>
  <div class="flex items-center gap-2 mb-4">
    <div class="bg-cyan-100 rounded-full p-1.5">
      <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
    </div>
    <h2 class="text-lg font-semibold text-gray-900">Client Themes (A Themes)</h2>
    <span class="text-sm text-gray-500">Client-side rendering with Astro.js</span>
  </div>

  <%# Client Theme Cards Grid %>
  <% if @client_themes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-6 mb-6 md:mb-8">
      <% @client_themes.each do |theme| %>
        <div class="bg-white rounded-lg shadow overflow-hidden border-l-4 border-cyan-500">
          <div class="p-4 md:p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= theme.friendly_name %></h3>
                <span class="text-xs text-gray-500 font-mono"><%= theme.name %></span>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-cyan-100 text-cyan-800">
                v<%= theme.version %>
              </span>
            </div>

            <% if theme.description.present? %>
              <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= theme.description %></p>
            <% end %>

            <div class="grid grid-cols-1 gap-2 text-center mb-4">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="text-xl md:text-2xl font-bold text-cyan-600"><%= number_with_delimiter(theme.website_count) %></div>
                <div class="text-xs text-gray-500">Websites using this theme</div>
              </div>
            </div>

            <%# Color Schema Preview %>
            <% if theme.color_schema.present? %>
              <div class="mb-4">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Color Schema</p>
                <div class="flex flex-wrap gap-2">
                  <% theme.default_config.select { |k, v| k.to_s.include?('color') && v.present? }.first(4).each do |key, color| %>
                    <div class="flex items-center gap-1">
                      <div class="w-5 h-5 rounded border border-gray-200 shadow-sm" style="background-color: <%= color %>"></div>
                      <span class="text-xs text-gray-500"><%= key.to_s.humanize.gsub(' color', '') %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <%# Font Schema Preview %>
            <% if theme.font_schema.present? %>
              <div class="mb-4">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Fonts</p>
                <div class="flex flex-wrap gap-2">
                  <% theme.default_config.select { |k, v| k.to_s.include?('font') && v.present? }.each do |key, font| %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                      <%= font %>
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="flex justify-end pt-4 border-t border-gray-200">
              <span class="px-3 py-1.5 text-gray-500 text-sm flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Astro Theme
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-6 mb-6 md:mb-8 text-center">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <p class="text-gray-500">No client themes available</p>
      <p class="text-xs text-gray-400 mt-1">Run <code class="bg-gray-200 px-1 rounded">rails db:seed:client_themes</code> to create them</p>
    </div>
  <% end %>

  <%# Distribution & Palette Usage Grid %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
    <%# Theme Distribution Chart %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <h3 class="text-base md:text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
        </svg>
        Theme Distribution
      </h3>

      <% if @distribution[:total] > 0 %>
        <div class="space-y-4">
          <% @distribution[:distribution].sort_by { |_, count| -count }.each do |theme_name, count| %>
            <% theme = @themes.find { |t| t.name == theme_name } %>
            <% percentage = @distribution[:percentages][theme_name] || 0 %>
            <div class="flex items-center gap-4">
              <div class="w-24 text-sm font-medium text-gray-700 truncate">
                <%= theme&.friendly_name || theme_name&.titleize || 'Unknown' %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-2">
                  <div class="flex-1 bg-gray-200 rounded-full h-3">
                    <div class="<%= percentage > 50 ? 'bg-purple-500' : 'bg-purple-600' %> h-3 rounded-full" style="width: <%= percentage %>%"></div>
                  </div>
                  <span class="text-sm font-bold text-gray-700 w-12 text-right"><%= number_with_precision(percentage, precision: 1) %>%</span>
                </div>
              </div>
              <span class="text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded"><%= count %></span>
            </div>
          <% end %>
        </div>

        <div class="border-t border-gray-200 mt-4 pt-4 flex justify-between items-center text-sm">
          <span class="text-gray-500">Total Websites</span>
          <span class="font-bold text-lg text-gray-900"><%= number_with_delimiter(@distribution[:total]) %></span>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-8 text-center">
          <svg class="h-16 w-16 text-gray-200 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
          <p class="text-gray-500">No websites yet</p>
          <p class="text-xs text-gray-400 mt-1">Create your first website to see distribution</p>
        </div>
      <% end %>
    </div>

    <%# Top Palette Usage %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <h3 class="text-base md:text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.098 19.902a3.75 3.75 0 005.304 0l6.401-6.402M6.75 21A3.75 3.75 0 013 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 003.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008z" />
        </svg>
        Palette Usage
      </h3>

      <% if @palette_usage.any? %>
        <div class="space-y-3">
          <% @palette_usage.sort_by { |_, count| -count }.first(8).each do |(theme_name, palette_id), count| %>
            <% theme = @themes.find { |t| t.name == theme_name } %>
            <% palette = theme&.palettes&.dig(palette_id) %>
            <div class="flex items-center gap-3">
              <div class="flex h-6 rounded overflow-hidden shadow-sm flex-shrink-0" style="width: 60px;">
                <% (palette&.dig('preview_colors') || []).each do |color| %>
                  <div class="flex-1" style="background-color: <%= color %>"></div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= palette&.dig('name') || palette_id %></p>
                <p class="text-xs text-gray-500 truncate"><%= theme&.friendly_name || theme_name %></p>
              </div>
              <span class="text-sm font-bold text-gray-700 bg-gray-100 px-2 py-0.5 rounded"><%= count %></span>
            </div>
          <% end %>
        </div>
      <% else %>

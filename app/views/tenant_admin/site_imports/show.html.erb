<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5">
  <div class="w-full mb-1">
    <div class="mb-4">
      <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
          <li class="inline-flex items-center">
            <%= link_to tenant_admin_root_path, class: "inline-flex items-center text-gray-700 hover:text-blue-600" do %>
              <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
              Dashboard
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
              <%= link_to "Site Imports", tenant_admin_site_imports_path, class: "ml-1 text-gray-700 hover:text-blue-600 md:ml-2" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
              <span class="ml-1 text-gray-400 md:ml-2" aria-current="page"><%= @pack_config['display_name'] || @import_pack.titleize %></span>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl"><%= @pack_config['display_name'] || @import_pack.titleize %></h1>
      <% if @pack_config['description'].present? %>
        <p class="mt-1 text-sm text-gray-500"><%= @pack_config['description'] %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="p-4 space-y-6">
  <!-- Pack Configuration -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Pack Configuration</h2>
    </div>
    <div class="px-6 py-4">
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Pack Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @import_pack %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Version</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @pack_config['version'] || '1.0' %></dd>
        </div>
        <% if @pack_config.dig('website', 'theme_name') %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Theme</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @pack_config.dig('website', 'theme_name') %></dd>
          </div>
        <% end %>
        <% if @pack_config.dig('website', 'default_client_locale') %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Default Locale</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @pack_config.dig('website', 'default_client_locale') %></dd>
          </div>
        <% end %>
        <% if @pack_config.dig('agency', 'display_name') %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Agency Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @pack_config.dig('agency', 'display_name') %></dd>
          </div>
        <% end %>
        <% if @pack_config.dig('agency', 'email') %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Agency Email</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @pack_config.dig('agency', 'email') %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Content Files -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Scraped Content</h2>
    </div>
    <div class="px-6 py-4">
      <% if @content_files.any? %>
        <div class="space-y-4">
          <% @content_files.each do |file| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <h3 class="text-sm font-medium text-gray-900 mb-2"><%= file[:name].titleize %></h3>
              <% if file[:content].present? %>
                <div class="text-xs text-gray-500 bg-gray-50 p-3 rounded overflow-x-auto max-h-48">
                  <pre><%= file[:content].to_yaml.truncate(1000) %></pre>
                </div>
              <% else %>
                <p class="text-sm text-gray-500">No content</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No content files found.</p>
      <% end %>
    </div>
  </div>

  <!-- Apply to Website -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Apply to Website</h2>
    </div>
    <div class="px-6 py-4">
      <p class="text-sm text-gray-500 mb-4">
        Select a website to apply this import pack to. This will seed the website with the scraped content.
      </p>

      <%= form_with url: apply_tenant_admin_site_import_path(@import_pack), method: :post, local: true, class: "flex items-end space-x-4" do %>
        <div class="flex-1">
          <label for="website_id" class="block text-sm font-medium text-gray-700 mb-1">Select Website</label>
          <select name="website_id" id="website_id" required class="block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500">
            <option value="">Choose a website...</option>
            <% Pwb::Website.unscoped.order(:subdomain).each do |website| %>
              <option value="<%= website.id %>"><%= website.subdomain %> - <%= website.company_display_name %></option>
            <% end %>
          </select>
        </div>
        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:ring-green-200" data-confirm="Are you sure? This will overwrite existing content on the selected website.">
          Apply Pack
        </button>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-between">
    <%= link_to "Back to Imports", tenant_admin_site_imports_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
    <%= button_to "Delete Import Pack", tenant_admin_site_import_path(@import_pack), method: :delete, data: { confirm: "Are you sure you want to delete this import pack?" }, class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:ring-red-200" %>
  </div>
</div>

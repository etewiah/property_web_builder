<% shard_name = website.shard_name || 'default' %>
<% badge_class = case shard_name
   when 'default', 'primary' then 'bg-blue-100 text-blue-800'
   when 'demo', 'demo_shard' then 'bg-purple-100 text-purple-800'
   else 'bg-gray-100 text-gray-800'
   end %>

<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= badge_class %>" id="shard_badge_<%= website.id %>">
  <%= shard_name %>
</span>

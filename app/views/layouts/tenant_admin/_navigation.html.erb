<aside class="fixed inset-y-0 left-0 z-30 w-64 bg-gray-800 text-white flex-shrink-0 transform transition-transform duration-300 ease-in-out md:relative md:translate-x-0"
       :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'">
  <div class="flex flex-col h-full">
    <!-- Logo/Brand -->
    <div class="flex items-center justify-between h-16 bg-gray-900 px-4">
      <span class="text-xl font-bold">Tenant Admin</span>
      <!-- Close button for mobile -->
      <button @click="sidebarOpen = false" class="md:hidden text-gray-400 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 overflow-y-auto py-4">
      <!-- Dashboard -->
      <div class="px-4 mb-6">
        <%= link_to tenant_admin_root_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_root_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          <span>Dashboard</span>
        <% end %>
      </div>

      <!-- Tenant Management -->
      <div class="px-4 mb-4">
        <h3 class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
          Tenant Management
        </h3>

        <%= link_to tenant_admin_websites_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_websites_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 18v-1.5A1.5 1.5 0 008.5 15v-1a1.5 1.5 0 00-1.5-1.5H5.691a4.002 4.002 0 01-1.359-2.973z" clip-rule="evenodd"></path>
          </svg>
          <span>Websites</span>
        <% end %>

        <%= link_to tenant_admin_agencies_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_agencies_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"></path>
          </svg>
          <span>Agencies</span>
        <% end %>

        <%= link_to tenant_admin_subdomains_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{request.path.include?('subdomains') ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"></path>
          </svg>
          <span>Subdomains</span>
        <% end %>

        <%= link_to tenant_admin_domains_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{request.path.include?('domains') ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd"></path>
          </svg>
          <span>Domains</span>
        <% end %>
      </div>

      <!-- User Management -->
      <div class="px-4 mb-4">
        <h3 class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
          User Management
        </h3>

        <%= link_to tenant_admin_users_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_users_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
          </svg>
          <span>All Users</span>
        <% end %>
      </div>

      <!-- Content Management -->
      <div class="px-4 mb-4">
        <h3 class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
          Content Management
        </h3>

        <%= link_to tenant_admin_props_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_props_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"></path>
          </svg>
          <span>Properties</span>
        <% end %>

        <%= link_to tenant_admin_pages_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_pages_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
          </svg>
          <span>Pages</span>
        <% end %>

        <%= link_to tenant_admin_page_parts_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_page_parts_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
          </svg>
          <span>Page Parts</span>
        <% end %>

        <%= link_to tenant_admin_contents_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{current_page?(tenant_admin_contents_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
          </svg>
          <span>Contents</span>
        <% end %>
      </div>

      <%# Communication - temporarily disabled %>
      <%#
      <div class="px-4 mb-4">
        <h3 class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
          Communication
        </h3>

        link_to tenant_admin_messages_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700" do
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          <span>Messages</span>
        end

        link_to tenant_admin_contacts_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700" do
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path>
          </svg>
          <span>Contacts</span>
        end
      </div>
      %>

      <!-- Security & Audit -->
      <div class="px-4 mb-4">
        <h3 class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
          Security
        </h3>

        <%= link_to tenant_admin_auth_audit_logs_path, class: "flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 #{request.path.include?('auth_audit_logs') ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Audit Logs</span>
        <% end %>
      </div>
    </nav>
  </div>
</aside>

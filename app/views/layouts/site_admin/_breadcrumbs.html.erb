<% crumbs = breadcrumbs %>
<% if crumbs.present? %>
  <nav class="mb-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm">
      <%# Dashboard link %>
      <li class="flex items-center">
        <%= link_to site_admin_root_path,
            class: "text-gray-500 hover:text-gray-700 flex items-center" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          <span class="sr-only md:not-sr-only md:ml-1">Dashboard</span>
        <% end %>
      </li>

      <% crumbs.each_with_index do |crumb, index| %>
        <li class="flex items-center">
          <%# Separator %>
          <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>

          <% if index == crumbs.length - 1 || crumb[:url].blank? %>
            <%# Current page (no link) %>
            <span class="<%= index == crumbs.length - 1 ? 'text-gray-900 font-medium' : 'text-gray-500' %>">
              <%= crumb[:label] %>
            </span>
          <% else %>
            <%# Link to parent %>
            <%= link_to crumb[:label], crumb[:url],
                class: "text-gray-500 hover:text-gray-700" %>
          <% end %>
        </li>
      <% end %>
    </ol>
  </nav>
<% end %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to 'â† Back to Page Parts', site_admin_page_parts_path, class: 'text-blue-600 hover:text-blue-800' %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Page Part Details</h1>
    </div>

    <div class="p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">Key</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @page_part.page_part_key %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Page</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @page_part.page %>
              <%= link_to @page_part.page.slug, site_admin_page_path(@page_part.page), class: 'text-blue-600 hover:text-blue-800' %>
            <% else %>
              N/A
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@page_part.created_at) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@page_part.updated_at) %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>

<div class="max-w-6xl mx-auto">
  <%= render 'header' %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <%= render 'navigation', current_tab: 'photos' %>
    <div class="p-6">
      <div class="mb-6">
        <p class="text-sm text-gray-600">Manage photos for this property. Drag and drop to reorder.</p>
      </div>
      <!-- Current Photos -->
      <% if @prop.respond_to?(:prop_photos) && @prop.prop_photos.any? %>
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Current Photos (<%= @prop.prop_photos.count %>)</h3>
          <div id="sortable-photos" class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% @prop.prop_photos.order(:sort_order).each_with_index do |photo, index| %>
              <div class="relative group photo-item" data-photo-id="<%= photo.id %>">
                <% if photo.image.attached? %>
                  <%= image_tag photo.image.variant(resize_to_limit: [200, 200]), class: "w-full h-32 object-cover rounded-lg cursor-move" %>
                <% else %>
                  <div class="w-full h-32 bg-gray-200 rounded-lg flex items-center justify-center">
                    <span class="text-gray-400 text-sm">No image</span>
                  </div>
                <% end %>
                <div class="absolute top-1 left-1 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                  #<%= index + 1 %>
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                  <%= button_to 'Remove', 
                      remove_photo_site_admin_prop_path(@prop, photo_id: photo.id), 
                      method: :delete, 
                      class: 'text-white text-sm hover:underline bg-red-600 px-3 py-1 rounded',
                      data: { turbo_confirm: 'Are you sure you want to remove this photo?' } %>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Reorder Form -->
          <%= form_with url: reorder_photos_site_admin_prop_path(@prop), method: :patch, local: true, id: "reorder-form", class: "mt-4" do |f| %>
            <%= f.hidden_field :photo_order, id: "photo-order-input", value: @prop.prop_photos.order(:sort_order).pluck(:id).join(',') %>
            <button type="submit" id="save-order-btn" class="hidden px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
              Save New Order
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="mb-8 p-8 bg-gray-50 rounded-lg text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="mt-2 text-sm text-gray-600">No photos uploaded yet</p>
        </div>
      <% end %>
      <!-- Upload Form -->
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 transition-colors">
        <%= form_with url: upload_photos_site_admin_prop_path(@prop), method: :post, local: true, multipart: true, id: "photo-upload-form" do |f| %>
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
          </svg>
          <p class="mt-2 text-sm text-gray-600">Drag and drop photos here, or click to select</p>
          <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
          <div class="mt-4">
            <%= f.file_field :photos, multiple: true, class: "hidden", id: "photo-upload", accept: "image/*" %>
            <label for="photo-upload" class="cursor-pointer px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 inline-block">
              Select Photos
            </label>
          </div>
          <div id="selected-files" class="mt-4 text-sm text-gray-600 hidden">
            <p>Selected: <span id="file-count">0</span> file(s)</p>
            <%= f.submit 'Upload Photos', class: 'mt-2 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700' %>
          </div>
        <% end %>
      </div>
      <script>
        // File upload handling
        document.getElementById('photo-upload').addEventListener('change', function(e) {
          const fileCount = e.target.files.length;
          const selectedFilesDiv = document.getElementById('selected-files');
          const fileCountSpan = document.getElementById('file-count');

          if (fileCount > 0) {
            selectedFilesDiv.classList.remove('hidden');
            fileCountSpan.textContent = fileCount;
          } else {
            selectedFilesDiv.classList.add('hidden');
          }
        });

        // Drag and drop reordering
        const sortableContainer = document.getElementById('sortable-photos');
        if (sortableContainer) {
          let draggedItem = null;
          
          sortableContainer.querySelectorAll('.photo-item').forEach(item => {
            item.setAttribute('draggable', 'true');
            
            item.addEventListener('dragstart', function(e) {
              draggedItem = this;
              this.style.opacity = '0.5';
            });
            
            item.addEventListener('dragend', function(e) {
              this.style.opacity = '1';
              draggedItem = null;
              updatePhotoOrder();
            });
            
            item.addEventListener('dragover', function(e) {
              e.preventDefault();
            });
            
            item.addEventListener('dragenter', function(e) {
              e.preventDefault();
              if (this !== draggedItem) {
                this.style.border = '2px dashed #3b82f6';
              }
            });
            
            item.addEventListener('dragleave', function(e) {
              this.style.border = '';
            });
            
            item.addEventListener('drop', function(e) {
              e.preventDefault();
              this.style.border = '';
              if (this !== draggedItem) {
                const allItems = [...sortableContainer.querySelectorAll('.photo-item')];
                const draggedIndex = allItems.indexOf(draggedItem);
                const targetIndex = allItems.indexOf(this);
                
                if (draggedIndex < targetIndex) {
                  this.parentNode.insertBefore(draggedItem, this.nextSibling);
                } else {
                  this.parentNode.insertBefore(draggedItem, this);
                }
              }
            });
          });
          
          function updatePhotoOrder() {
            const items = sortableContainer.querySelectorAll('.photo-item');
            const order = [...items].map(item => item.dataset.photoId);
            document.getElementById('photo-order-input').value = order.join(',');
            document.getElementById('save-order-btn').classList.remove('hidden');
            
            // Update the position numbers
            items.forEach((item, index) => {
              const badge = item.querySelector('.absolute.top-1');
              if (badge) {
                badge.textContent = '#' + (index + 1);
              }
            });
          }
        }
      </script>
      <!-- Form Actions -->
      <div class="flex justify-end items-center mt-8 pt-6 border-t border-gray-200">
        <div class="flex space-x-3">
          <%= link_to 'Back to Property', site_admin_prop_path(@prop), class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
        </div>
      </div>
    </div>
  </div>
</div>

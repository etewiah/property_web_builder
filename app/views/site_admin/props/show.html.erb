<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to 'â† Back to Properties', site_admin_props_path, class: 'text-blue-600 hover:text-blue-800' %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900">Property Details</h1>
      <%= link_to 'Edit Property', edit_site_admin_prop_path(@prop), class: 'px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' %>
    </div>

    <div class="p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Reference</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @prop.reference %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Title</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @prop.title %></dd>
        </div>

        <% if @prop.price_sale_current_cents.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Sale Price</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@prop.price_sale_current_cents / 100.0, unit: @prop.price_sale_current_currency || @prop.currency) %></dd>
          </div>
        <% elsif @prop.price_rental_monthly_current_cents.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Monthly Rent</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@prop.price_rental_monthly_current_cents / 100.0, unit: @prop.price_rental_monthly_current_currency || @prop.currency) %></dd>
          </div>
        <% end %>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@prop.created_at) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@prop.updated_at) %></dd>
        </div>

        <% if @prop.respond_to?(:description) && @prop.description.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @prop.description %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</div>

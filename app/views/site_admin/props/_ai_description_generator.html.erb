<%# AI-powered property description generator %>
<%# Include this partial on the edit_text page to allow generating AI descriptions %>
<%#
  Required locals:
    - prop: The Pwb::Prop record
    - listing_type: 'sale' or 'rental'
    - locale: The target locale (e.g., 'en')
    - form: The form builder (optional, for field targeting)
%>

<%
  prop ||= @prop
  listing_type ||= 'sale'
  locale ||= 'en'
  endpoint = "/api_manage/v1/#{locale}/properties/#{prop.id}/ai_description"
%>

<div data-controller="ai-description"
     data-ai-description-property-id-value="<%= prop.id %>"
     data-ai-description-endpoint-value="<%= endpoint %>"
     class="mb-6 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 border border-indigo-200 rounded-lg">

  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-semibold text-gray-900">AI Description Generator</h3>
        <p class="text-xs text-gray-500">Generate compelling property descriptions using AI</p>
      </div>
    </div>

    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
      Beta
    </span>
  </div>

  <div class="flex flex-wrap gap-3 mb-4">
    <div class="flex-1 min-w-[120px]">
      <label for="ai_locale_<%= listing_type %>" class="block text-xs font-medium text-gray-600 mb-1">Language</label>
      <select id="ai_locale_<%= listing_type %>"
              data-ai-description-target="localeSelect"
              class="block w-full px-2 py-1.5 text-sm border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        <option value="en" <%= 'selected' if locale == 'en' %>>English</option>
        <option value="es" <%= 'selected' if locale == 'es' %>>Spanish</option>
        <option value="fr">French</option>
        <option value="de">German</option>
        <option value="pt">Portuguese</option>
        <option value="it">Italian</option>
      </select>
    </div>

    <div class="flex-1 min-w-[120px]">
      <label for="ai_tone_<%= listing_type %>" class="block text-xs font-medium text-gray-600 mb-1">Tone</label>
      <select id="ai_tone_<%= listing_type %>"
              data-ai-description-target="toneSelect"
              class="block w-full px-2 py-1.5 text-sm border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        <option value="professional">Professional</option>
        <option value="casual">Casual</option>
        <option value="luxury">Luxury</option>
        <option value="warm">Warm & Friendly</option>
        <option value="modern">Modern & Trendy</option>
      </select>
    </div>

    <div class="flex items-end">
      <button type="button"
              data-action="ai-description#generate"
              data-ai-description-target="generateButton"
              class="inline-flex items-center px-4 py-1.5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Generate
      </button>
    </div>
  </div>

  <%# Error output %>
  <div data-ai-description-target="errorOutput" class="hidden"></div>

  <%# Output section (hidden until generation) %>
  <div data-ai-description-target="output" class="hidden mt-4 space-y-4">
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <%# Compliance badge %>
      <div data-ai-description-target="complianceOutput" class="mb-3 text-sm"></div>

      <%# Generated Title %>
      <div class="mb-4">
        <div class="flex items-center justify-between mb-1">
          <label class="text-sm font-medium text-gray-700">Generated Title</label>
          <button type="button"
                  data-action="ai-description#applyTitle"
                  class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">
            Apply to form
          </button>
        </div>
        <div data-ai-description-target="titleOutput"
             class="p-2 bg-gray-50 rounded border border-gray-200 text-sm text-gray-800 min-h-[32px]">
        </div>
      </div>

      <%# Generated Description %>
      <div class="mb-4">
        <div class="flex items-center justify-between mb-1">
          <label class="text-sm font-medium text-gray-700">Generated Description</label>
          <button type="button"
                  data-action="ai-description#applyDescription"
                  class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">
            Apply to form
          </button>
        </div>
        <div data-ai-description-target="descriptionOutput"
             class="p-2 bg-gray-50 rounded border border-gray-200 text-sm text-gray-800 min-h-[80px] whitespace-pre-wrap">
        </div>
      </div>

      <%# Generated Meta Description %>
      <div class="mb-4">
        <div class="flex items-center justify-between mb-1">
          <label class="text-sm font-medium text-gray-700">Generated Meta Description (SEO)</label>
          <button type="button"
                  data-action="ai-description#applyMetaDescription"
                  class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">
            Apply to form
          </button>
        </div>
        <div data-ai-description-target="metaDescriptionOutput"
             class="p-2 bg-gray-50 rounded border border-gray-200 text-sm text-gray-800 min-h-[40px]">
        </div>
      </div>

      <%# Apply All Button %>
      <div class="flex justify-end pt-2 border-t border-gray-200">
        <button type="button"
                data-action="ai-description#applyAll"
                class="inline-flex items-center px-3 py-1.5 border border-indigo-300 rounded-md text-sm font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          Apply All to Form
        </button>
      </div>
    </div>

    <p class="text-xs text-gray-500">
      <strong>Note:</strong> AI-generated content should be reviewed before publishing.
      The generator checks for Fair Housing compliance, but always verify the content meets your requirements.
    </p>
  </div>
</div>

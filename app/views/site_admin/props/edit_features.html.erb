<div class="max-w-6xl mx-auto">
  <%= render 'header' %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <%= render 'navigation', current_tab: 'features' %>
    <div class="p-6">
      <%= form_with model: @prop, url: site_admin_prop_path(@prop), method: :patch, local: true do |f| %>
        <div class="mb-6">
          <p class="text-sm text-gray-600">Select the features and amenities available at this property.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- General Features -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900 border-b pb-2">General</h3>
            <label class="flex items-center">
              <%= f.check_box :has_pool, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Swimming Pool</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_garden, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Garden</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_terrace, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Terrace</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_balcony, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Balcony</span>
            </label>
          </div>
          <!-- Comfort Features -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900 border-b pb-2">Comfort</h3>
            <label class="flex items-center">
              <%= f.check_box :has_air_conditioning, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Air Conditioning</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_heating, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Heating</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_elevator, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Elevator</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_storage, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Storage Room</span>
            </label>
          </div>
          <!-- Security Features -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900 border-b pb-2">Security</h3>
            <label class="flex items-center">
              <%= f.check_box :has_security, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Security System</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_video_intercom, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Video Intercom</span>
            </label>
            <label class="flex items-center">
              <%= f.check_box :has_gated_community, class: "rounded text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm text-gray-700">Gated Community</span>
            </label>
          </div>
        </div>
        <!-- Form Actions -->
        <div class="flex justify-end items-center mt-8 pt-6 border-t border-gray-200">
          <div class="flex space-x-3">
            <%= link_to 'Cancel', site_admin_prop_path(@prop), class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
            <%= f.submit 'Save Changes', class: 'px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

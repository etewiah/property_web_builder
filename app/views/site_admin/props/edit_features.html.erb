<div class="max-w-6xl mx-auto">
  <%= render 'header' %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <%= render 'navigation', current_tab: 'features' %>
    <div class="p-6">
      <%= form_with url: site_admin_prop_path(@prop), method: :patch, local: true do |f| %>
        <div class="mb-6">
          <p class="text-sm text-gray-600">Select the features and amenities available at this property.</p>
        </div>

        <%
          # Group features by category for better organization
          feature_categories = {
            'Outdoor' => %w[extras.pool extras.garden extras.terrace extras.balcony extras.sea_view extras.mountain_view],
            'Comfort' => %w[extras.air_conditioning extras.heating extras.elevator extras.storage extras.fireplace extras.fitted_kitchen],
            'Security' => %w[extras.security extras.video_intercom extras.gated_community extras.parking]
          }

          # Create a human-readable label from feature key
          feature_label = ->(key) {
            # Try I18n first, fallback to humanized key
            label = I18n.t(key, default: nil)
            if label.nil? || label.start_with?('translation missing')
              key.split('.').last.humanize.titleize
            else
              label
            end
          }
        %>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% feature_categories.each do |category, feature_keys| %>
            <div class="space-y-4">
              <h3 class="text-lg font-semibold text-gray-900 border-b pb-2"><%= category %></h3>
              <% feature_keys.each do |feature_key| %>
                <% next unless @available_features.include?(feature_key) %>
                <label class="flex items-center">
                  <input type="checkbox"
                         name="features[]"
                         value="<%= feature_key %>"
                         <%= 'checked' if @current_features.include?(feature_key) %>
                         class="rounded text-blue-600 focus:ring-blue-500">
                  <span class="ml-2 text-sm text-gray-700"><%= feature_label.call(feature_key) %></span>
                </label>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Additional features not in categories -->
        <% uncategorized = @available_features - feature_categories.values.flatten %>
        <% if uncategorized.any? %>
          <div class="mt-6">
            <h3 class="text-lg font-semibold text-gray-900 border-b pb-2">Other Features</h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
              <% uncategorized.each do |feature_key| %>
                <label class="flex items-center">
                  <input type="checkbox"
                         name="features[]"
                         value="<%= feature_key %>"
                         <%= 'checked' if @current_features.include?(feature_key) %>
                         class="rounded text-blue-600 focus:ring-blue-500">
                  <span class="ml-2 text-sm text-gray-700"><%= feature_label.call(feature_key) %></span>
                </label>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Hidden field to ensure empty features array is submitted when nothing is checked -->
        <input type="hidden" name="features[]" value="">

        <!-- Form Actions -->
        <div class="flex justify-end items-center mt-8 pt-6 border-t border-gray-200">
          <div class="flex space-x-3">
            <%= link_to 'Cancel', site_admin_prop_path(@prop), class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50' %>
            <%= f.submit 'Save Changes', class: 'px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

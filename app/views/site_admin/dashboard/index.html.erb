<div class="max-w-7xl mx-auto">
  <div class="mb-4 md:mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="mt-1 md:mt-2 text-sm md:text-base text-gray-600">
      Overview of your website: <%= @website.subdomain %>
    </p>
  </div>

  <!-- Subscription Status Card -->
  <% if @subscription %>
    <div class="mb-6 md:mb-8">
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-4 md:p-6 border-b border-gray-200">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div class="flex items-center space-x-3">
              <h3 class="text-base md:text-lg font-semibold text-gray-900">Subscription Status</h3>
              <!-- Status Badge -->
              <% case @subscription_info[:status] %>
              <% when 'active' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% when 'trialing' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Trial
                </span>
              <% when 'past_due' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  Past Due
                </span>
              <% when 'canceled' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Canceled
                </span>
              <% when 'expired' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Expired
                </span>
              <% end %>
            </div>
            <div class="mt-2 sm:mt-0">
              <span class="text-sm text-gray-600">Plan: </span>
              <span class="font-semibold text-gray-900"><%= @subscription_info[:plan_name] %></span>
              <span class="text-sm text-gray-500 ml-2">(<%= @subscription_info[:plan_price] %>)</span>
            </div>
          </div>
        </div>

        <!-- Trial Warning -->
        <% if @subscription_info[:status] == 'trialing' && @subscription_info[:trial_days_remaining] %>
          <div class="px-4 md:px-6 py-3 <%= @subscription_info[:trial_ending_soon] ? 'bg-yellow-50' : 'bg-blue-50' %>">
            <div class="flex items-center">
              <% if @subscription_info[:trial_ending_soon] %>
                <svg class="h-5 w-5 text-yellow-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-medium text-yellow-800">
                  Trial ending soon!
                </span>
              <% else %>
                <svg class="h-5 w-5 text-blue-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-medium text-blue-800">
                  Trial period
                </span>
              <% end %>
              <span class="ml-2 text-sm <%= @subscription_info[:trial_ending_soon] ? 'text-yellow-700' : 'text-blue-700' %>">
                <% if @subscription_info[:trial_days_remaining] == 0 %>
                  Expires today
                <% elsif @subscription_info[:trial_days_remaining] == 1 %>
                  1 day remaining
                <% else %>
                  <%= @subscription_info[:trial_days_remaining] %> days remaining
                <% end %>
              </span>
            </div>
          </div>
        <% end %>

        <!-- Past Due Warning -->
        <% if @subscription_info[:status] == 'past_due' %>
          <div class="px-4 md:px-6 py-3 bg-orange-50">
            <div class="flex items-center">
              <svg class="h-5 w-5 text-orange-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium text-orange-800">
                Payment past due. Please update your payment method to avoid service interruption.
              </span>
            </div>
          </div>
        <% end %>

        <!-- Subscription Details -->
        <div class="px-4 md:px-6 py-4">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <!-- Property Usage -->
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide">Properties</p>
              <p class="mt-1 text-lg font-semibold text-gray-900">
                <%= @stats[:total_properties] %>
                <% if @subscription_info[:property_limit] %>
                  <span class="text-sm font-normal text-gray-500">/ <%= @subscription_info[:property_limit] %></span>
                <% else %>
                  <span class="text-sm font-normal text-gray-500">/ Unlimited</span>
                <% end %>
              </p>
            </div>

            <!-- Remaining Properties -->
            <% if @subscription_info[:remaining_properties] %>
              <div>
                <p class="text-xs text-gray-500 uppercase tracking-wide">Remaining</p>
                <p class="mt-1 text-lg font-semibold <%= @subscription_info[:remaining_properties] <= 5 ? 'text-orange-600' : 'text-gray-900' %>">
                  <%= @subscription_info[:remaining_properties] %>
                </p>
              </div>
            <% end %>

            <!-- Current Period -->
            <% if @subscription_info[:current_period_ends_at] %>
              <div>
                <p class="text-xs text-gray-500 uppercase tracking-wide">Period Ends</p>
                <p class="mt-1 text-sm font-medium text-gray-900">
                  <%= @subscription_info[:current_period_ends_at].strftime('%b %d, %Y') %>
                </p>
              </div>
            <% end %>

            <!-- Status Summary -->
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide">Access</p>
              <p class="mt-1 text-sm font-medium <%= @subscription_info[:in_good_standing] ? 'text-green-600' : 'text-red-600' %>">
                <%= @subscription_info[:in_good_standing] ? 'Full Access' : 'Limited' %>
              </p>
            </div>
          </div>

          <!-- Plan Features -->
          <% if @subscription_info[:features].any? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-2">Plan Features</p>
              <div class="flex flex-wrap gap-2">
                <% @subscription_info[:features].each do |feature| %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700">
                    <svg class="w-3 h-3 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <%= feature[:description] %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- No Subscription -->
    <div class="mb-6 md:mb-8">
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 md:p-6">
        <div class="flex items-center">
          <svg class="h-6 w-6 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="text-sm font-medium text-gray-900">No Active Subscription</h3>
            <p class="text-sm text-gray-500 mt-1">This website does not have an active subscription plan.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 mb-6 md:mb-8">
    <!-- Properties Card -->
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Properties</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= @stats[:total_properties] %></p>
        </div>
        <div class="bg-blue-100 rounded-full p-3">
          <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <%= link_to 'View All Properties', site_admin_props_path, class: 'text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block' %>
    </div>

    <!-- Pages Card -->
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Pages</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= @stats[:total_pages] %></p>
        </div>
        <div class="bg-green-100 rounded-full p-3">
          <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <%= link_to 'View All Pages', site_admin_pages_path, class: 'text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block' %>
    </div>

    <!-- Messages Card -->
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Messages</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= @stats[:total_messages] %></p>
        </div>
        <div class="bg-purple-100 rounded-full p-3">
          <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
        </div>
      </div>
      <%= link_to 'View All Messages', site_admin_messages_path, class: 'text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block' %>
    </div>

    <!-- Contacts Card -->
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Contacts</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= @stats[:total_contacts] %></p>
        </div>
        <div class="bg-yellow-100 rounded-full p-3">
          <svg class="w-8 h-8 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path>
          </svg>
        </div>
      </div>
      <%= link_to 'View All Contacts', site_admin_contacts_path, class: 'text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block' %>
    </div>

    <!-- Contents Card -->
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Contents</p>
          <p class="text-2xl md:text-3xl font-bold text-gray-900 mt-1 md:mt-2"><%= @stats[:total_contents] %></p>
        </div>
        <div class="bg-red-100 rounded-full p-3">
          <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      <%= link_to 'View All Contents', site_admin_contents_path, class: 'text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block' %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
    <!-- Recent Properties -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 md:px-6 py-3 md:py-4 border-b border-gray-200">
        <h2 class="text-base md:text-lg font-semibold text-gray-900">Recent Properties</h2>
      </div>
      <div class="p-4 md:p-6">
        <% if @recent_properties.any? %>
          <div class="space-y-3">
            <% @recent_properties.each do |property| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                <div>
                  <p class="font-medium text-gray-900">
                    <%= property.title.presence || property.reference %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= format_date(property.created_at) %>
                  </p>
                </div>
                <%= link_to 'View', site_admin_prop_path(property), class: 'text-blue-600 hover:text-blue-800 text-sm' %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No properties yet</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Messages -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 md:px-6 py-3 md:py-4 border-b border-gray-200">
        <h2 class="text-base md:text-lg font-semibold text-gray-900">Recent Messages</h2>
      </div>
      <div class="p-4 md:p-6">
        <% if @recent_messages.any? %>
          <div class="space-y-3">
            <% @recent_messages.each do |message| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                <div>
                  <p class="font-medium text-gray-900">
                    <%= message.origin_email.presence || 'No email' %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= format_date(message.created_at) %>
                  </p>
                </div>
                <%= link_to 'View', site_admin_message_path(message), class: 'text-blue-600 hover:text-blue-800 text-sm' %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No messages yet</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Contacts -->
  <div class="mt-4 md:mt-6">
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 md:px-6 py-3 md:py-4 border-b border-gray-200">
        <h2 class="text-base md:text-lg font-semibold text-gray-900">Recent Contacts</h2>
      </div>
      <div class="p-4 md:p-6">
        <% if @recent_contacts.any? %>
          <div class="space-y-3">
            <% @recent_contacts.each do |contact| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                <div>
                  <p class="font-medium text-gray-900">
                    <%= contact.primary_email.presence || 'No email' %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= format_date(contact.created_at) %>
                  </p>
                </div>
                <%= link_to 'View', site_admin_contact_path(contact), class: 'text-blue-600 hover:text-blue-800 text-sm' %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No contacts yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

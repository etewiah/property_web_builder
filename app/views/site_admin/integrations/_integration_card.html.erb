<%# Displays a single integration provider as a card %>
<%# locals: category, provider_key, definition, integration %>

<div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
  <div class="p-5">
    <div class="flex items-start justify-between">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
            <span class="text-lg font-semibold text-gray-600">
              <%= definition.display_name[0] %>
            </span>
          </div>
        </div>
        <div class="ml-3">
          <h3 class="text-lg font-medium text-gray-900"><%= definition.display_name %></h3>
          <p class="text-sm text-gray-500 line-clamp-1"><%= definition.description %></p>
        </div>
      </div>

      <%# Status badge %>
      <% if integration %>
        <% case integration.status %>
        <% when :connected %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Connected
          </span>
        <% when :error %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            Error
          </span>
        <% when :disabled %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
            Disabled
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            Not Configured
          </span>
        <% end %>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
          Not Set Up
        </span>
      <% end %>
    </div>

    <%# Configuration details if integrated %>
    <% if integration&.credentials_present? %>
      <div class="mt-4 space-y-2 text-sm">
        <% definition.credential_fields.each do |key, field| %>
          <div class="flex items-center text-gray-600">
            <span class="font-medium w-28"><%= field[:label] %>:</span>
            <span class="font-mono text-gray-500"><%= integration.masked_credential(key) || 'Not set' %></span>
          </div>
        <% end %>

        <% if integration.last_used_at %>
          <div class="flex items-center text-gray-600">
            <span class="font-medium w-28">Last used:</span>
            <span><%= time_ago_in_words(integration.last_used_at) %> ago</span>
          </div>
        <% end %>

        <% if integration.has_error? %>
          <div class="mt-2 p-2 bg-red-50 rounded text-red-700 text-xs">
            <strong>Error:</strong> <%= integration.last_error_message %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Action buttons %>
  <div class="px-5 py-3 bg-gray-50 border-t border-gray-200">
    <% if integration %>
      <div class="flex items-center justify-between">
        <div class="flex space-x-2">
          <%= link_to edit_site_admin_integration_path(integration),
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Configure
          <% end %>

          <% if integration.credentials_present? %>
            <%= button_to test_connection_site_admin_integration_path(integration),
                          method: :post,
                          class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Test
            <% end %>
          <% end %>
        </div>

        <div class="flex items-center space-x-2">
          <%= button_to toggle_site_admin_integration_path(integration),
                        method: :post,
                        class: "relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 #{integration.enabled? ? 'bg-blue-600' : 'bg-gray-200'}",
                        title: integration.enabled? ? 'Click to disable' : 'Click to enable' do %>
            <span class="sr-only">Toggle integration</span>
            <span class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out <%= integration.enabled? ? 'translate-x-5' : 'translate-x-0' %>"></span>
          <% end %>
        </div>
      </div>
    <% else %>
      <%= link_to new_site_admin_integration_path(category: category, provider: provider_key),
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Set Up
      <% end %>
    <% end %>
  </div>
</div>

<%
  # Determine the public page URL
  page_path = @page.slug == 'home' ? '/' : "/p/#{@page.slug}"
  public_page_url = "#{request.protocol}#{request.host_with_port}#{page_path}"
%>

<div class="max-w-5xl mx-auto">
  <div class="mb-6 flex items-center justify-between">
    <%= link_to 'â† Back to Pages', site_admin_pages_path, class: 'text-blue-600 hover:text-blue-800' %>
    <%= link_to public_page_url, target: '_blank', class: 'inline-flex items-center px-3 py-1.5 border border-gray-300 text-gray-700 text-sm rounded-lg hover:bg-gray-50' do %>
      <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
      View on Site
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @page.slug.titleize %></h1>
        <p class="text-sm text-gray-500 mt-1">
          <a href="<%= public_page_url %>" target="_blank" class="text-blue-600 hover:text-blue-800">
            <%= public_page_url %>
            <svg class="w-3 h-3 inline ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </p>
      </div>
      <%= link_to 'Edit Settings', edit_site_admin_page_path(@page), class: 'px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' %>
    </div>

    <div class="p-6">
      <dl class="grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">Slug</dt>
          <dd class="mt-1 text-sm text-gray-900">/<%= @page.slug %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@page.created_at) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= format_date(@page.updated_at) %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Page Parts / Content Sections -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Content Sections</h2>
      <p class="text-sm text-gray-500">Editable sections on this page</p>
    </div>

    <% page_parts = @page.page_parts.where(website_id: current_website&.id, show_in_editor: true).order(:order_in_editor) %>
    <% if page_parts.any? %>
      <div class="divide-y divide-gray-100">
        <% page_parts.each do |page_part| %>
          <% editor_setup = page_part.editor_setup || {} %>
          <% tab_title = editor_setup['tabTitleKey'] ? I18n.t(editor_setup['tabTitleKey'], default: page_part.page_part_key.titleize) : page_part.page_part_key.titleize %>
          <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= tab_title %></p>
                <p class="text-sm text-gray-500"><%= page_part.page_part_key %></p>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <% page_content = @page.page_contents.find_by(page_part_key: page_part.page_part_key) %>
              <% is_visible = page_content&.visible_on_page %>
              <span class="px-2 py-1 text-xs rounded <%= is_visible ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                <%= is_visible ? 'Visible' : 'Hidden' %>
              </span>
              <%= link_to site_admin_page_page_part_path(@page, page_part),
                          class: 'text-blue-600 hover:text-blue-800 text-sm mr-3' do %>
                View
              <% end %>
              <%= link_to edit_site_admin_page_page_part_path(@page, page_part),
                          class: 'inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm rounded hover:bg-blue-700' do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Content
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <p>No editable content sections configured for this page</p>
      </div>
    <% end %>
  </div>
</div>

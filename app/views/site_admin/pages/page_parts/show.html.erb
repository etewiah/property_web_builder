<div class="max-w-5xl mx-auto">
  <!-- Breadcrumb -->
  <div class="mb-6">
    <%= link_to 'â† Back to Pages', site_admin_pages_path, class: 'text-blue-600 hover:text-blue-800' %>
  </div>

  <!-- Header -->
  <div class="mb-6 flex justify-between items-start">
    <div>
      <% editor_setup = @page_part.editor_setup || {} %>
      <% tab_title = editor_setup['tabTitleKey'] ? I18n.t(editor_setup['tabTitleKey'], default: @page_part.page_part_key.titleize) : @page_part.page_part_key.titleize %>
      <h1 class="text-3xl font-bold text-gray-900"><%= tab_title %></h1>
      <p class="mt-2 text-gray-600">
        Page: <span class="font-medium"><%= @page.slug.titleize %></span>
        &middot;
        Section: <span class="font-mono text-sm"><%= @page_part.page_part_key %></span>
      </p>
    </div>
    <%= link_to edit_site_admin_page_page_part_path(@page, @page_part),
                class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
      Edit Content
    <% end %>
  </div>

  <!-- Content by Locale -->
  <div class="space-y-6">
    <% @locale_details.each do |locale_detail| %>
      <%# Use base locale (e.g., "en") to access block_contents, not full locale (e.g., "en-UK") %>
      <% locale_blocks = @block_contents[locale_detail[:base]]&.dig('blocks') || {} %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">
            Content (<%= locale_detail[:label] %>)
          </h2>
        </div>
        <div class="p-6">
          <% if locale_blocks.any? %>
            <dl class="space-y-4">
              <% locale_blocks.each do |label, block_data| %>
                <div class="border-b border-gray-100 pb-4 last:border-0 last:pb-0">
                  <dt class="text-sm font-medium text-gray-500 mb-1"><%= label.titleize.gsub('_', ' ') %></dt>
                  <dd class="text-sm text-gray-900">
                    <% content = block_data['content'] %>
                    <% if content.present? %>
                      <% if content.start_with?('http') && content.match?(/\.(jpg|jpeg|png|gif|webp|svg)$/i) %>
                        <img src="<%= content %>" alt="<%= label %>" class="max-h-40 rounded border border-gray-200">
                      <% elsif content.include?('<') %>
                        <div class="prose prose-sm max-w-none"><%= raw content %></div>
                      <% else %>
                        <%= content %>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400 italic">No content</span>
                    <% end %>
                  </dd>
                </div>
              <% end %>
            </dl>
          <% else %>
            <p class="text-gray-500 text-center py-4">No content saved for this locale</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Editor Setup Info -->
  <% if @editor_setup.present? %>
    <div class="mt-6 bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Editor Configuration</h2>
      </div>
      <div class="p-6">
        <pre class="bg-gray-100 p-4 rounded-lg overflow-x-auto text-sm"><code><%= JSON.pretty_generate(@editor_setup) %></code></pre>
      </div>
    </div>
  <% end %>
</div>

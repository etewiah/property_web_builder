<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Pages</h1>
    <p class="mt-2 text-gray-600"><%= @pagy.count %> pages for <%= current_website.subdomain %></p>
  </div>

  <!-- Search Form -->
  <div class="mb-6 bg-white rounded-lg shadow p-4">
    <%= form_with url: site_admin_pages_path, method: :get, local: true, class: "flex gap-4" do |f| %>
      <div class="flex-1">
        <%= f.text_field :search, value: params[:search], placeholder: "Search by slug...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= f.submit "Search", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>

  <!-- Pages List with Expandable Page Parts -->
  <div class="space-y-4">
    <% if @pages.any? %>
      <% @pages.each do |page| %>
        <% page_parts = page.page_parts.where(website_id: current_website&.id, show_in_editor: true).order(:order_in_editor) %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <!-- Page Header -->
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div class="flex items-center">
              <button type="button"
                      onclick="togglePageParts('<%= page.id %>')"
                      class="mr-3 text-gray-500 hover:text-gray-700 focus:outline-none"
                      id="toggle-btn-<%= page.id %>">
                <svg class="w-5 h-5 transform transition-transform" id="toggle-icon-<%= page.id %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= page.slug.titleize %></h3>
                <p class="text-sm text-gray-500">/<%= page.slug %> &middot; <%= page_parts.count %> editable sections</p>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <%= link_to site_admin_page_path(page), class: 'text-blue-600 hover:text-blue-800 text-sm' do %>
                <span>View Details</span>
              <% end %>
              <%= link_to edit_site_admin_page_path(page), class: 'text-green-600 hover:text-green-800 text-sm' do %>
                <span>Edit Settings</span>
              <% end %>
            </div>
          </div>

          <!-- Page Parts (Collapsible) -->
          <div id="page-parts-<%= page.id %>" class="hidden">
            <% if page_parts.any? %>
              <div class="divide-y divide-gray-100">
                <% page_parts.each do |page_part| %>
                  <% editor_setup = page_part.editor_setup || {} %>
                  <% tab_title = editor_setup['tabTitleKey'] ? I18n.t(editor_setup['tabTitleKey'], default: page_part.page_part_key.titleize) : page_part.page_part_key.titleize %>
                  <div class="px-6 py-3 flex items-center justify-between hover:bg-gray-50">
                    <div class="flex items-center">
                      <div class="w-8 h-8 rounded bg-blue-100 flex items-center justify-center mr-3">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= tab_title %></p>
                        <p class="text-xs text-gray-500"><%= page_part.page_part_key %></p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-3">
                      <% # Show visibility status %>
                      <% page_content = page.page_contents.find_by(page_part_key: page_part.page_part_key) %>
                      <% is_visible = page_content&.visible_on_page %>
                      <span class="px-2 py-1 text-xs rounded <%= is_visible ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                        <%= is_visible ? 'Visible' : 'Hidden' %>
                      </span>
                      <%= link_to edit_site_admin_page_page_part_path(page, page_part),
                                  class: 'inline-flex items-center px-3 py-1 border border-blue-600 text-blue-600 text-sm rounded hover:bg-blue-50' do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit Content
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="px-6 py-8 text-center text-gray-500">
                <p>No editable sections configured for this page</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
        <p>No pages found</p>
      </div>
    <% end %>

    <%# Pagination %>
    <%= render 'shared/pagination', pagy: @pagy %>
  </div>
</div>

<script>
  function togglePageParts(pageId) {
    const container = document.getElementById(`page-parts-${pageId}`);
    const icon = document.getElementById(`toggle-icon-${pageId}`);

    if (container.classList.contains('hidden')) {
      container.classList.remove('hidden');
      icon.classList.add('rotate-90');
    } else {
      container.classList.add('hidden');
      icon.classList.remove('rotate-90');
    }
  }

  // Auto-expand the first page on load
  document.addEventListener('DOMContentLoaded', function() {
    const firstToggle = document.querySelector('[id^="toggle-btn-"]');
    if (firstToggle) {
      const pageId = firstToggle.id.replace('toggle-btn-', '');
      togglePageParts(pageId);
    }
  });
</script>

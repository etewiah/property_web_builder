<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back link -->
  <div class="mb-6">
    <%= link_to site_admin_listing_videos_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Videos
    <% end %>
  </div>

  <!-- Header -->
  <div class="sm:flex sm:items-start sm:justify-between mb-8">
    <div class="flex-1">
      <div class="flex items-center gap-4">
        <h1 class="text-2xl font-semibold text-gray-900"><%= @video.title %></h1>
        <%= render partial: 'status_badge', locals: { status: @video.status } %>
      </div>
      <p class="mt-2 text-sm text-gray-500">
        Reference: <span class="font-mono"><%= @video.reference_number %></span>
        <% if @video.created_at %>
          &middot; Created <%= @video.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        <% end %>
      </p>
    </div>
    <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
      <% if @video.completed? %>
        <%= link_to download_site_admin_listing_video_path(@video), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Download
        <% end %>

        <%= link_to share_site_admin_listing_video_path(@video), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
          </svg>
          Share
        <% end %>
      <% end %>

      <% if @video.failed? || @video.completed? %>
        <%= link_to regenerate_site_admin_listing_video_path(@video), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Regenerate
        <% end %>
      <% end %>

      <%= link_to site_admin_listing_video_path(@video), method: :delete, data: { confirm: 'Are you sure you want to delete this video?' }, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" do %>
        <svg class="-ml-0.5 mr-2 h-4 w-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Video Preview -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="aspect-video bg-gray-900 flex items-center justify-center">
          <% if @video.completed? && @video.video_url.present? %>
            <video controls class="w-full h-full" poster="<%= @video.thumbnail_url %>">
              <source src="<%= @video.video_url %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          <% elsif @video.generating? %>
            <div class="text-center text-white">
              <svg class="animate-spin h-12 w-12 mx-auto mb-4" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <p class="text-lg font-medium">Generating Video...</p>
              <p class="text-sm text-gray-400 mt-2">This may take a few minutes</p>
            </div>
          <% elsif @video.failed? %>
            <div class="text-center text-white">
              <svg class="h-12 w-12 mx-auto mb-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
              <p class="text-lg font-medium">Generation Failed</p>
              <p class="text-sm text-gray-400 mt-2">Click Regenerate to try again</p>
            </div>
          <% else %>
            <div class="text-center text-white">
              <svg class="h-12 w-12 mx-auto mb-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <p class="text-lg font-medium">Video Pending</p>
            </div>
          <% end %>
        </div>
      </div>

      <% if @video.failed? && @video.error_message.present? %>
        <!-- Error Message -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Generation Error</h3>
              <p class="mt-1 text-sm text-red-700"><%= @video.error_message %></p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Script Section -->
      <% if @video.script.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Voiceover Script</h3>
          <div class="prose prose-sm max-w-none text-gray-700">
            <%= simple_format(@video.script) %>
          </div>
        </div>
      <% end %>

      <!-- Scenes Section -->
      <% if @scenes.any? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Scene Breakdown</h3>
          <div class="space-y-3">
            <% @scenes.each_with_index do |scene, index| %>
              <div class="flex items-start gap-4 p-3 bg-gray-50 rounded-lg">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium">
                  <%= index + 1 %>
                </div>
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-900">
                      Photo <%= (scene['photo_index'] || scene[:photo_index] || index) + 1 %>
                    </span>
                    <span class="text-xs text-gray-500">
                      <%= scene['duration'] || scene[:duration] || 5 %>s
                    </span>
                  </div>
                  <% if scene['caption'].present? || scene[:caption].present? %>
                    <p class="mt-1 text-sm text-gray-600"><%= scene['caption'] || scene[:caption] %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Property Card -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4">Property</h3>
        <% if @property %>
          <div class="flex items-start gap-4">
            <% if @property.prop_photos.any? %>
              <img src="<%= url_for(@property.prop_photos.first.image) %>" alt="" class="w-16 h-16 rounded-lg object-cover">
            <% end %>
            <div>
              <p class="font-medium text-gray-900"><%= @property.street_address || 'No address' %></p>
              <p class="text-sm text-gray-500"><%= @property.city %></p>
              <p class="text-sm text-gray-500"><%= @property.prop_type_key&.titleize %></p>
            </div>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-100 grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-500">Bedrooms</span>
              <p class="font-medium"><%= @property.count_bedrooms || '-' %></p>
            </div>
            <div>
              <span class="text-gray-500">Bathrooms</span>
              <p class="font-medium"><%= @property.count_bathrooms || '-' %></p>
            </div>
            <div>
              <span class="text-gray-500">Photos</span>
              <p class="font-medium"><%= @property.prop_photos.count %></p>
            </div>
            <div>
              <span class="text-gray-500">Scenes</span>
              <p class="font-medium"><%= @video.scene_count %></p>
            </div>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">Property not available</p>
        <% end %>
      </div>

      <!-- Video Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4">Video Details</h3>
        <dl class="space-y-3 text-sm">
          <div class="flex justify-between">
            <dt class="text-gray-500">Format</dt>
            <dd class="font-medium text-gray-900"><%= @video.format_label %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Style</dt>
            <dd class="font-medium text-gray-900"><%= @video.style.titleize %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Voice</dt>
            <dd class="font-medium text-gray-900"><%= @video.voice.titleize %></dd>
          </div>
          <% if @video.duration_seconds %>
            <div class="flex justify-between">
              <dt class="text-gray-500">Duration</dt>
              <dd class="font-medium text-gray-900"><%= @video.duration_formatted %></dd>
            </div>
          <% end %>
          <% if @video.resolution %>
            <div class="flex justify-between">
              <dt class="text-gray-500">Resolution</dt>
              <dd class="font-medium text-gray-900"><%= @video.resolution %></dd>
            </div>
          <% end %>
          <% if @video.cost_cents && @video.cost_cents > 0 %>
            <div class="flex justify-between">
              <dt class="text-gray-500">Generation Cost</dt>
              <dd class="font-medium text-gray-900"><%= @video.cost_formatted %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <% if @video.share_token.present? %>
        <!-- Share Info -->
        <div class="bg-blue-50 rounded-lg border border-blue-200 p-6">
          <h3 class="text-sm font-medium text-blue-800 mb-2">Share Link</h3>
          <div class="flex items-center gap-2">
            <input type="text" readonly value="<%= public_listing_video_url(@video.share_token) rescue '#' %>"
                   class="flex-1 text-xs font-mono bg-white border border-blue-200 rounded px-2 py-1">
            <button onclick="navigator.clipboard.writeText(this.previousElementSibling.value)" class="text-blue-600 hover:text-blue-800">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          <% if @video.view_count > 0 %>
            <p class="mt-2 text-xs text-blue-600"><%= @video.view_count %> views</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-3xl mx-auto">
  <%= render 'progress', steps: @steps, current_step: @step, total_steps: @steps.keys.max %>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Set Up Your Profile</h1>
      <p class="text-gray-600">Tell visitors about your agency or business. This information will appear on your website.</p>
    </div>

    <%= form_with model: @agency, url: site_admin_onboarding_path(step: @step), method: :post, local: true do |f| %>
      <div class="space-y-6">
        <!-- Business Name -->
        <div>
          <%= f.label :display_name, "Business / Agency Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :display_name,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
              placeholder: "Your Company Name",
              required: true %>
          <% if @agency.errors[:display_name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @agency.errors[:display_name].first %></p>
          <% end %>
        </div>

        <!-- Company Name (Legal) -->
        <div>
          <%= f.label :company_name, "Company Name (Legal)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :company_name,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
              placeholder: "Your Company Inc." %>
          <p class="mt-1 text-xs text-gray-500">Optional - your registered business name if different from display name</p>
        </div>

        <!-- Contact Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :email_primary, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email_primary,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
                placeholder: "contact@yourcompany.com" %>
          </div>

          <div>
            <%= f.label :phone_number_primary, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :phone_number_primary,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border",
                placeholder: "+1 (555) 123-4567" %>
          </div>
        </div>

      </div>

      <!-- Tip -->
      <div class="mt-6 bg-blue-50 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              You can add your address and more details later in the Website Settings section.
            </p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-between mt-8 pt-6 border-t border-gray-200">
        <%= link_to "Back", site_admin_onboarding_path(step: @step - 1), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

        <%= f.submit "Save & Continue", class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

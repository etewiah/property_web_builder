<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-8">
        <span class="sr-only">Drag</span>
      </th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">External Code</th>
      <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Visible</th>
      <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">In Search</th>
      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200" id="sortable-features">
    <% if features.any? %>
      <% features.each do |feature| %>
        <tr class="hover:bg-gray-50" data-id="<%= feature.id %>">
          <td class="px-6 py-4 whitespace-nowrap cursor-move drag-handle">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"></path>
            </svg>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <% if feature.icon.present? %>
                <span class="mr-2 text-gray-500"><%= feature.icon %></span>
              <% end %>
              <div>
                <div class="text-sm font-medium text-gray-900"><%= feature.display_label %></div>
                <div class="text-xs text-gray-500"><%= feature.global_key %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if feature.external_code.present? %>
              <code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= feature.external_code %></code>
            <% else %>
              <span class="text-gray-400">-</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-center">
            <%= button_to toggle_visibility_site_admin_search_filters_feature_path(feature),
                          method: :patch,
                          class: "inline-flex items-center justify-center",
                          form: { data: { turbo_frame: "_top" } } do %>
              <% if feature.visible? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Yes
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                  No
                </span>
              <% end %>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-center">
            <%= button_to toggle_search_site_admin_search_filters_feature_path(feature),
                          method: :patch,
                          class: "inline-flex items-center justify-center",
                          form: { data: { turbo_frame: "_top" } } do %>
              <% if feature.show_in_search? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
                  </svg>
                  Yes
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                  No
                </span>
              <% end %>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to edit_site_admin_search_filters_feature_path(feature), class: 'text-blue-600 hover:text-blue-800 mr-3' do %>
              Edit
            <% end %>
            <%= button_to site_admin_search_filters_feature_path(feature),
                          method: :delete,
                          class: 'text-red-600 hover:text-red-800',
                          form: { data: { turbo_confirm: "Are you sure you want to delete '#{feature.display_label}'?" } } do %>
              Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <p class="mt-2">No features defined yet</p>
          <div class="mt-4 space-x-3">
            <%= link_to 'Add your first feature', new_site_admin_search_filters_feature_path, class: 'text-blue-600 hover:text-blue-800' %>
            <% if current_website.external_feed_enabled? %>
              <span class="text-gray-400">or</span>
              <%= button_to "Import from provider",
                            import_from_provider_site_admin_search_filters_features_path,
                            method: :post,
                            class: "text-green-600 hover:text-green-800" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

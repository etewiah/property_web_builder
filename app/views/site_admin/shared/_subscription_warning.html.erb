<%#
  Subscription Warning Partial
  Shows alerts for subscription states that need attention.

  Required locals:
    - subscription: Pwb::Subscription object (can be nil)

  Optional locals:
    - show_upgrade_link: boolean (default: true)
%>
<% subscription ||= @subscription %>
<% show_upgrade_link = local_assigns.fetch(:show_upgrade_link, true) %>

<% if subscription.present? %>
  <%# Trial ending soon warning %>
  <% if subscription.trialing? && subscription.trial_ending_soon? %>
    <div class="rounded-lg p-4 bg-yellow-50 border border-yellow-200 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Trial Ending Soon</h3>
          <div class="mt-1 text-sm text-yellow-700">
            <p>
              Your trial expires in
              <strong>
                <% if subscription.trial_days_remaining == 0 %>
                  today
                <% elsif subscription.trial_days_remaining == 1 %>
                  1 day
                <% else %>
                  <%= subscription.trial_days_remaining %> days
                <% end %>
              </strong>.
              Upgrade now to keep access to your website.
            </p>
          </div>
          <% if show_upgrade_link %>
            <div class="mt-3">
              <%= link_to 'Upgrade Now', billing_path, class: 'text-sm font-medium text-yellow-800 hover:text-yellow-900 underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Past due payment warning %>
  <% if subscription.past_due? %>
    <div class="rounded-lg p-4 bg-red-50 border border-red-200 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Payment Required</h3>
          <div class="mt-1 text-sm text-red-700">
            <p>Your subscription payment is past due. Please update your billing information to avoid service interruption.</p>
          </div>
          <% if show_upgrade_link %>
            <div class="mt-3">
              <%= link_to 'Update Billing', billing_path, class: 'text-sm font-medium text-red-800 hover:text-red-900 underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Canceled subscription notice %>
  <% if subscription.canceled? %>
    <div class="rounded-lg p-4 bg-gray-50 border border-gray-200 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-gray-800">Subscription Canceled</h3>
          <div class="mt-1 text-sm text-gray-600">
            <p>
              Your subscription has been canceled.
              <% if subscription.current_period_ends_at.present? && subscription.current_period_ends_at > Time.current %>
                Access continues until <%= subscription.current_period_ends_at.to_date.to_fs(:long) %>.
              <% end %>
            </p>
          </div>
          <% if show_upgrade_link %>
            <div class="mt-3">
              <%= link_to 'Reactivate', billing_path, class: 'text-sm font-medium text-gray-800 hover:text-gray-900 underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Cancel pending notice %>
  <% if subscription.cancel_at_period_end? && !subscription.canceled? %>
    <div class="rounded-lg p-4 bg-blue-50 border border-blue-200 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Cancellation Scheduled</h3>
          <div class="mt-1 text-sm text-blue-700">
            <p>
              Your subscription will cancel on <%= subscription.current_period_ends_at.to_date.to_fs(:long) %>.
            </p>
          </div>
          <% if show_upgrade_link %>
            <div class="mt-3">
              <%= link_to 'Keep Subscription', billing_path, class: 'text-sm font-medium text-blue-800 hover:text-blue-900 underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Expired subscription warning %>
  <% if subscription.expired? %>
    <div class="rounded-lg p-4 bg-red-50 border border-red-200 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Subscription Expired</h3>
          <div class="mt-1 text-sm text-red-700">
            <p>Your subscription has expired. Please subscribe to regain full access.</p>
          </div>
          <% if show_upgrade_link %>
            <div class="mt-3">
              <%= link_to 'Subscribe', billing_path, class: 'text-sm font-medium text-red-800 hover:text-red-900 underline' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

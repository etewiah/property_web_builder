<%#
  Empty State Component

  Displays a friendly message when a list or section has no content.

  Usage:
    render 'site_admin/shared/empty_state',
      title: 'No properties yet',
      description: 'Get started by adding your first property listing.',
      icon: 'property',
      action_text: 'Add Property',
      action_path: new_site_admin_prop_path

  Options:
    - title: Main message
    - description: Supporting text
    - icon: Icon type (property, message, contact, page, file, search)
    - action_text: CTA button text (optional)
    - action_path: CTA button path (optional)
    - secondary_text: Secondary action text (optional)
    - secondary_path: Secondary action path (optional)
%>
<% icon_type = local_assigns[:icon] || 'file' %>

<div class="text-center py-12 px-4">
  <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
    <% case icon_type %>
    <% when 'property' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
    <% when 'message' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
    <% when 'contact' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
      </svg>
    <% when 'page' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
    <% when 'search' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    <% when 'image' %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
    <% else %>
      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
      </svg>
    <% end %>
  </div>

  <h3 class="text-lg font-medium text-gray-900 mb-1"><%= title %></h3>
  <p class="text-gray-500 mb-6 max-w-sm mx-auto"><%= description %></p>

  <% if local_assigns[:action_path].present? %>
    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <%= link_to action_path, class: "inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= action_text %>
      <% end %>
      <% if local_assigns[:secondary_path].present? %>
        <%= link_to secondary_path, class: "inline-flex items-center justify-center px-4 py-2 text-gray-700 font-medium rounded-lg hover:bg-gray-100 transition-colors" do %>
          <%= secondary_text %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

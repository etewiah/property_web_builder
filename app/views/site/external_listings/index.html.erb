<%# External Listings Search Results %>
<div class="external-listings-page">
  <%# Search Header %>
  <div class="bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <h1 class="text-2xl font-bold text-gray-900">
        <%= t("external_feed.search.title", default: "Property Search") %>
      </h1>
      <p class="mt-1 text-sm text-gray-600">
        <%= t("external_feed.search.subtitle", default: "Browse available properties from our partner network") %>
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="lg:grid lg:grid-cols-4 lg:gap-8">
      <%# Filters Sidebar %>
      <aside class="lg:col-span-1 mb-8 lg:mb-0">
        <%= render "search_form", filter_options: @filter_options, search_params: @search_params %>
      </aside>

      <%# Results %>
      <main class="lg:col-span-3">
        <%# Results Header %>
        <div class="flex items-center justify-between mb-6">
          <div>
            <% if @result.any? %>
              <p class="text-sm text-gray-700">
                <%= t("external_feed.search.showing",
                      range: @result.results_range,
                      default: "Showing %{range} properties") %>
              </p>
            <% else %>
              <p class="text-sm text-gray-700">
                <%= t("external_feed.search.no_results", default: "No properties found") %>
              </p>
            <% end %>
          </div>

          <%# Sort Dropdown %>
          <div class="flex items-center gap-2">
            <label for="sort" class="text-sm text-gray-600">
              <%= t("external_feed.search.sort_by", default: "Sort by:") %>
            </label>
            <select id="sort" name="sort"
                    class="text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                    onchange="updateSort(this.value)">
              <% @filter_options[:sort_options].each do |opt| %>
                <option value="<%= opt[:value] %>" <%= 'selected' if @search_params[:sort].to_s == opt[:value] %>>
                  <%= opt[:label] %>
                </option>
              <% end %>
            </select>
          </div>
        </div>

        <% if @result.error? %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  <%= t("external_feed.search.error", default: "Unable to load properties at this time. Please try again later.") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <%# Property Grid %>
        <% if @result.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <% @result.properties.each do |property| %>
              <%= render "property_card", property: property %>
            <% end %>
          </div>

          <%# Pagination %>
          <% if @result.total_pages > 1 %>
            <%= render "pagination", result: @result %>
          <% end %>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">
              <%= t("external_feed.search.no_properties", default: "No properties found") %>
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              <%= t("external_feed.search.try_different", default: "Try adjusting your search filters") %>
            </p>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</div>

<script>
  function updateSort(value) {
    const url = new URL(window.location.href);
    url.searchParams.set('sort', value);
    window.location.href = url.toString();
  }
</script>

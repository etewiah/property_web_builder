<!-- Biarritz Property Row - High Contrast Coastal Design -->
<section class="bg-[#FAFAF9] border-b-2 border-[#E7E5E4] py-12">
  <div class="container mx-auto px-4">
    
    <!-- Section Header - High Contrast -->
    <div class="mb-8">
      <h3 class="text-3xl md:text-4xl font-bold text-[#1C1917] mb-2" style="font-family: 'Playfair Display', Georgia, serif;">
        <%= I18n.t title_key %>
      </h3>
      <div class="w-24 h-1 bg-gradient-to-r from-[#0369A1] to-[#D97706] rounded-full"></div>
    </div>
    
    <!-- Property Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% properties.each_with_index do |property, index| %>
        <!-- Property Card - Coastal Style -->
        <article class="card-coastal group" itemscope itemtype="https://schema.org/RealEstateListing">
          
          <!-- Property Image with Hover Effect -->
          <%= link_to property.contextual_show_path(rent_or_sale) do %>
            <div class="relative overflow-hidden rounded-t-xl">
              <%= opt_image_tag((property.ordered_photo 1), quality: "auto",
                  height: 300, 
                  crop: "scale", 
                  class: "w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110", 
                  loading: index < 3 ? "eager" : "lazy",
                  use_picture: true, 
                  alt: property.title.presence || "Property listing") %>
              
              <!-- Overlay on Hover -->
              <div class="absolute inset-0 bg-gradient-to-t from-[#082F49]/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <span class="text-white font-semibold text-sm flex items-center">
                  View Details
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          <% end %>
          
          <!-- Card Body -->
          <div class="p-6 bg-white">
            
            <!-- Property Title - High Contrast -->
            <h2 class="text-xl font-semibold text-[#1C1917] mb-3 line-clamp-2 min-h-[3.5rem]" itemprop="name">
              <%= link_to property.title, 
                  property.contextual_show_path(rent_or_sale), 
                  class: "hover:text-[#0C4A6E] transition-colors",
                  title: property.title %>
            </h2>
            
            <!-- Property Price - Ocean Blue -->
            <div class="mb-4">
              <span class="text-3xl font-bold text-[#0C4A6E]" itemprop="price">
                <%= property_price(property, rent_or_sale) %>
              </span>
            </div>
            
            <!-- Property Features - Dark Icons & Text -->
            <div class="border-t-2 border-[#F5F5F4] pt-4">
              <ul class="flex items-center justify-between text-sm text-[#44403C]" role="list">
                
                <!-- Bedrooms -->
                <li class="flex flex-col items-center" title="<%= property.count_bedrooms %> Bedrooms">
                  <i class="fa fa-bed text-lg text-[#0369A1] mb-1" aria-hidden="true"></i>
                  <span class="font-semibold text-[#1C1917]"><%= property.count_bedrooms %></span>
                  <span class="text-xs hidden sm:block">Beds</span>
                </li>
                
                <!-- Bathrooms -->
                <li class="flex flex-col items-center" title="<%= property.count_bathrooms %> Bathrooms">
                  <i class="fa fa-shower text-lg text-[#0369A1] mb-1" aria-hidden="true"></i>
                  <span class="font-semibold text-[#1C1917]"><%= property.count_bathrooms %></span>
                  <span class="text-xs hidden sm:block">Baths</span>
                </li>
                
                <!-- Area -->
                <li class="flex flex-col items-center" title="<%= property.constructed_area %><%= area_unit property %>">
                  <i class="fa fa-arrows-alt text-lg text-[#0369A1] mb-1" aria-hidden="true"></i>
                  <span class="font-semibold text-[#1C1917]"><%= property.constructed_area %></span>
                  <span class="text-xs hidden sm:block"><%= area_unit property %></span>
                </li>
                
                <!-- Garage (if available) -->
                <% if property.has_garage %>
                  <li class="flex flex-col items-center" title="<%= property.count_garages %> Garage Spaces">
                    <i class="fa fa-car text-lg text-[#0369A1] mb-1" aria-hidden="true"></i>
                    <span class="font-semibold text-[#1C1917]"><%= property.count_garages %></span>
                    <span class="text-xs hidden sm:block">Garage</span>
                  </li>
                <% else %>
                  <!-- Spacer for alignment -->
                  <li class="w-12"></li>
                <% end %>
              </ul>
            </div>
            
            <!-- Property Type Badge (Optional) -->
            <% if property.prop_type_key.present? %>
              <div class="mt-4">
                <span class="inline-block bg-[#FEF3C7] text-[#92400E] px-3 py-1 rounded-full text-xs font-semibold">
                  <%= I18n.t("activerecord.attributes.pwb/property.prop_types.#{property.prop_type_key}", default: property.prop_type_key.humanize) %>
                </span>
              </div>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</section>

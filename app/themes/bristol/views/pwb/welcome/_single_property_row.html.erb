<section class="bg-gray-100 border-b border-gray-200 py-8">
  <div class="container mx-auto px-4">
    <div class="mb-6">
      <h3 class="text-2xl font-semibold" style="text-transform: none;"><%= t title_key %></h3>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% properties.each_with_index do |property, index| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <%= link_to property.contextual_show_path(rent_or_sale) do %>
          <div class="relative">
            <%= opt_image_tag((property.ordered_photo 1), quality: "auto",
              height: 300, crop: "scale", class: "w-full h-64 object-cover") %>
          </div>
          <% end %>
          <div class="p-4">
            <h2 class="text-lg font-semibold truncate mb-2">
              <%= link_to property.title, property.contextual_show_path(rent_or_sale), class: "text-gray-800 hover:text-blue-600" %>
            </h2>
            <h2 class="text-xl font-bold text-blue-600">
              <%= property.contextual_price_with_currency rent_or_sale  %>
            </h2>
          </div>
          <div class="px-4 pb-4 border-t border-gray-200 pt-3">
            <ul class="flex items-center space-x-4 text-sm text-gray-600">
              <li class="hidden md:flex items-center">
                <i class="fa fa-bed mr-1"></i>
                <small><%= property.count_bedrooms %></small>
              </li>
              <li class="hidden md:flex items-center">
                <i class="fa fa-shower mr-1"></i>
                <small><%= property.count_bathrooms %></small>
              </li>
              <li class="hidden md:flex items-center">
                <i class="fa fa-arrows-alt mr-1"></i>
                <small><%= property.constructed_area %><%= area_unit property %></small>
              </li>
              <li class="hidden md:flex items-center">
                <% if property.has_garage %>
                  <i class="fa fa-car mr-1"></i>
                  <small><%= property.count_garages %></small>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Bristol Theme Request Property Info Form - Tailwind CSS -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <div class="bg-gray-800 px-4 py-3">
    <h2 class="text-lg font-semibold text-white">
      <%= I18n.t("requestPropertyInfo") %>
    </h2>
  </div>
  <div class="p-4">
    <%= form_for :contact, url: '/request_property_info.js', method: 'post', 
        html: { class: 'space-y-4' }, remote: true do |f| %>

      <%= f.hidden_field :locale, value: I18n.locale %>
      <%= f.hidden_field :property_id, value: @property_details.id %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.name" %> <span class="text-red-500">*</span>
        </label>
        <%= f.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            required: true,
            placeholder: t("contact.name") %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.email" %> <span class="text-red-500">*</span>
        </label>
        <%= f.email_field :email, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            required: true,
            placeholder: t("contact.email") %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.tel" %>
        </label>
        <%= f.text_field :tel, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: t("contact.tel") %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.message" %>
        </label>
        <%= f.text_area :message, 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: t("contact.message") %>
      </div>

      <div id="request-info-result"></div>

      <button type="submit" 
              class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition flex items-center justify-center">
        <i class="fa fa-envelope mr-2"></i>
        <%= I18n.t("send") %>
      </button>

      <div id="resp_enviar"></div>
    <% end %>
  </div>
</div>


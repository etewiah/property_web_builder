<!-- Bristol Theme Contact Us Form - Tailwind CSS -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <p id="contact-us-prompt" class="text-gray-600 mb-6">
    <%= I18n.t("contactUsPrompt") %>
  </p>

  <%= form_for :contact, url: '/contact_us.js', method: 'post',
      html: { class: 'space-y-4' }, remote: true do |f| %>

    <%= f.hidden_field :locale, value: I18n.locale %>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        <%= t "contact.name" %> <span class="text-red-500">*</span>
      </label>
      <%= f.text_field :name,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          required: true,
          placeholder: t("contact.name") %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.email" %> <span class="text-red-500">*</span>
        </label>
        <%= f.email_field :email,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            required: true,
            placeholder: t("contact.email") %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          <%= t "contact.tel" %>
        </label>
        <%= f.text_field :tel,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: t("contact.tel") %>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        <%= t "contact.subject" %>
      </label>
      <%= f.text_field :subject,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: t("contact.subject") %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        <%= t "contact.message" %>
      </label>
      <%= f.text_area :message,
          rows: 5,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: t("contact.message") %>
    </div>

    <div id="contact-us-result"></div>

    <button type="submit"
            class="bg-blue-600 text-white font-medium py-2 px-6 rounded-lg hover:bg-blue-700 transition flex items-center">
      <i class="fa fa-envelope mr-2"></i>
      <%= I18n.t("send") %>
    </button>

    <div id="resp_enviar"></div>
  <% end %>
</div>

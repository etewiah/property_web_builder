<!-- Bristol Theme Search Form Landing - Tailwind CSS -->
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="bg-blue-600 px-6 py-4">
    <h2 class="text-xl font-bold text-white"><%= t "findAProperty" %></h2>
  </div>
  
  <%= simple_form_for :search, url: "/#{I18n.locale}/buy", method: 'get', 
      html: { class: 'p-6' }, remote: false do |f| %>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.input :for_sale_price_from, 
            collection: @prices_collection, 
            required: false, 
            selected: '50.000',
            input_html: { 
              maxlength: 20,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            },
            label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
      <div>
        <%= f.input :for_sale_price_till, 
            collection: @prices_collection, 
            required: false, 
            selected: '150.000',
            input_html: { 
              maxlength: 20,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            },
            label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
      <div>
        <%= f.input :property_type, 
            collection: @property_types, 
            label_method: :label, 
            value_method: :value, 
            selected: "", 
            required: false,
            input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" },
            label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
      <div>
        <%= f.input :num_bedrooms, 
            collection: 0..50, 
            required: false,
            selected: '2',
            input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" },
            label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
    </div>
    
    <div class="flex justify-center">
      <%= f.button :button, class: "bg-blue-600 text-white font-medium py-3 px-8 rounded-lg hover:bg-blue-700 transition flex items-center", 
          id: "btn_buscar_inmuebles" do %>
        <i class="fa fa-search mr-2"></i>
        <%= I18n.t("search") %>
      <% end %>
    </div>
  <% end %>
</div>


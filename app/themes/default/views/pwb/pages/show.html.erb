<% page_title @page.page_title  %>
<!-- MAIN CONTENT... -->
<div class="pg-opt">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>
          <%= @page.main_link.link_title %>
        </h2>
      </div>
      <div class="col-md-6" style="">
        <ol class="breadcrumb">
          <li><a href="/">
              <%= I18n.t("webContentSections.home") %>
            </a></li>
          <li class="active">
            <%= @page.main_link.link_title %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <% @page_contents_for_edit.each_with_index do |page_content, index| %>
    <div class="col-md-12" <%= "data-pwb-page-part=#{page_content.page_part_key}".html_safe if params[:edit_mode] == 'true' %>>
      <%== @content_to_show[index] %>
    </div>
  <% end %>
</div>

<div class="pwb-breadcrumb bg-gray-100 py-4">
  <div class="pwb-container container mx-auto px-4">
    <div class="flex flex-wrap items-center">

      <% if @is_subdomain_admin  %>
      <div class="w-full mb-2">
        <span class="inline-block">
          <a href="<%= @property_details.admin_url %>" class="text-blue-600 hover:text-blue-800">
            <%= icon(:edit, size: :sm) %>
            <%= I18n.t "labels.edit" %>
          </a>
        </span>
      </div>
      <% end %>

      <div class="pwb-breadcrumb__title-wrapper w-full md:w-5/6 flex items-center gap-3">
        <h2 class="pwb-breadcrumb__title text-2xl font-bold text-gray-800">
          <%= @property_details.title %>
        </h2>
        <%# Use slug_or_id so the View Property link works correctly %>
        <button type="button"
                onclick="togglePropertyFavorite(event, '<%= @property_details.slug_or_id %>', '<%= j(@property_details.title) %>')"
                class="pwb-breadcrumb__fav-btn favorite-btn p-2 text-gray-400 hover:text-red-500 rounded-full hover:bg-gray-200 transition-colors"
                data-reference="<%= @property_details.slug_or_id %>"
                title="<%= t('favorites.save_to_favorites', default: 'Save to favorites') %>">
          <svg class="h-6 w-6 favorite-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </button>
      </div>
      <div class="w-full md:w-1/2 hidden">
        <nav class="pwb-breadcrumb__nav flex" aria-label="Breadcrumb">
          <ol class="pwb-breadcrumb__list inline-flex items-center space-x-1 md:space-x-3">
            <li class="pwb-breadcrumb__item inline-flex items-center">
              <a href="/" class="pwb-breadcrumb__link text-gray-700 hover:text-blue-600">
                <%= I18n.t("webContentSections.home") %>
              </a>
            </li>
            <li class="pwb-breadcrumb__item">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                <span class="ml-1 text-gray-500 md:ml-2">
                  <%= @property_details.title %>
                </span>
              </div>
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</div>

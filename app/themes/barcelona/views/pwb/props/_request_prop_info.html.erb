<%# Barcelona Theme - Request Property Info Form %>
<%# Mediterranean design with coastal blues and warm accents %>

<div class="pwb-form-card bg-white rounded-softer overflow-hidden">
  <div class="pwb-form-card__header bg-gradient-to-r from-med-600 to-med-500 px-6 py-4">
    <h2 class="pwb-form-card__title font-display text-lg font-bold text-white flex items-center">
      <%= icon(:email, size: :sm, class: "text-white mr-3") %>
      <%= I18n.t("requestPropertyInfo") %>
    </h2>
  </div>
  <div class="p-6">
    <%= form_for :contact, url: '/request_property_info.js', method: 'post',
        html: { class: 'pwb-form space-y-4' }, remote: true do |f| %>

      <%= f.hidden_field :locale, value: I18n.locale %>
      <%= f.hidden_field :property_id, value: @property_details.id %>

      <div>
        <%= f.label :name, I18n.t("name"), class: "pwb-form__label block text-sm font-semibold text-warm-700 mb-2" %>
        <%= f.text_field :name, required: true, 
            class: "pwb-form__input w-full px-4 py-3 border border-warm-200 rounded-soft focus:ring-2 focus:ring-med-500 focus:border-med-500 transition-all text-warm-900 placeholder-warm-400",
            placeholder: I18n.t("name") %>
      </div>

      <div>
        <%= f.label :email, I18n.t("email"), class: "pwb-form__label block text-sm font-semibold text-warm-700 mb-2" %>
        <%= f.email_field :email, required: true,
            class: "pwb-form__input w-full px-4 py-3 border border-warm-200 rounded-soft focus:ring-2 focus:ring-med-500 focus:border-med-500 transition-all text-warm-900 placeholder-warm-400",
            placeholder: I18n.t("email") %>
      </div>

      <div>
        <%= f.label :tel, I18n.t("tel"), class: "pwb-form__label block text-sm font-semibold text-warm-700 mb-2" %>
        <%= f.text_field :tel,
            class: "pwb-form__input w-full px-4 py-3 border border-warm-200 rounded-soft focus:ring-2 focus:ring-med-500 focus:border-med-500 transition-all text-warm-900 placeholder-warm-400",
            placeholder: I18n.t("tel") %>
      </div>

      <div>
        <%= f.label :message, I18n.t("message"), class: "pwb-form__label block text-sm font-semibold text-warm-700 mb-2" %>
        <%= f.text_area :message, rows: 4,
            class: "pwb-form__textarea w-full px-4 py-3 border border-warm-200 rounded-soft focus:ring-2 focus:ring-med-500 focus:border-med-500 transition-all text-warm-900 placeholder-warm-400 resize-none",
            placeholder: I18n.t("message") %>
      </div>

      <div id="request-info-result"></div>

      <button type="submit"
              class="pwb-form__submit w-full bg-gradient-to-r from-med-600 to-med-500 text-white font-semibold py-3 px-6 rounded-soft hover:from-med-700 hover:to-med-600 transition-all shadow-soft hover:shadow-medium flex items-center justify-center">
        <%= icon(:send, size: :sm, class: "mr-2") %>
        <%= I18n.t("send") %>
      </button>

      <div id="resp_enviar"></div>
    <% end %>
  </div>
</div>

